<%- include('../layout', { title: title || 'Pagar Mensalidade' }) %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="bg-white shadow-lg rounded-lg p-6">
      <h1 class="text-3xl font-bold text-gray-800 mb-6">Pagar Mensalidade</h1>

      <div class="bg-gray-50 p-6 rounded-lg mb-6">
        <h3 class="font-semibold text-gray-800 mb-4">Detalhes da Cobrança:</h3>
        <div class="space-y-2">
          <p class="text-gray-700"><strong>Valor:</strong> <span class="text-2xl font-bold text-green-600">R$ <%= parseFloat(cobranca.valor).toFixed(2) %></span></p>
          <p class="text-gray-700"><strong>Vencimento:</strong> <%= new Date(cobranca.data_vencimento).toLocaleDateString('pt-BR') %></p>
          <p class="text-gray-700"><strong>Mês de Referência:</strong> <%= cobranca.mes_referencia %></p>
          <p class="text-gray-700"><strong>Status:</strong> 
            <span class="px-2 py-1 bg-yellow-100 text-yellow-800 rounded">
              <%= cobranca.status === 'vencida' ? 'Vencida' : 'Pendente' %>
            </span>
          </p>
        </div>
      </div>

      <% if (cobranca.link_pagamento) { %>
      <div class="text-center mb-6">
        <a href="<%= cobranca.link_pagamento %>" 
           target="_blank"
           class="inline-block bg-green-600 hover:bg-green-700 text-white font-bold py-4 px-8 rounded-lg transition duration-200 text-lg shadow-lg hover:shadow-xl">
          <i class="fas fa-credit-card mr-2"></i>
          Pagar Agora
        </a>
      </div>
      <p class="text-center text-gray-600 text-sm">
        Você será redirecionado para a página segura do InfinitePay
      </p>
      <% } else { %>
      <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded mb-6">
        <p class="text-yellow-800">
          Link de pagamento não disponível. Entre em contato com o suporte.
        </p>
      </div>
      <% } %>

      <div class="mt-6 pt-6 border-t">
        <a href="/dashboard" class="text-blue-600 hover:text-blue-800">← Voltar para o Dashboard</a>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>

