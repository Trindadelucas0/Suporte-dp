    <link rel="apple-touch-icon" href="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 200 200'%3E%3Cdefs%3E%3ClinearGradient id='grad' x1='0%25' y1='0%25' x2='100%25' y2='100%25'%3E%3Cstop offset='0%25' style='stop-color:%23DC2626;stop-opacity:1' /%3E%3Cstop offset='100%25' style='stop-color:%23FBBF24;stop-opacity:1' /%3E%3C/linearGradient%3E%3C/defs%3E%3Crect width='200' height='200' rx='20' fill='url(%23grad)'/%3E%3Ctext x='100' y='140' font-family='Arial, sans-serif' font-size='120' font-weight='bold' text-anchor='middle' fill='white'%3EDP%3C/text%3E%3C/svg%3E" />
    <style>
        * {
            font-family: 'Inter', sans-serif;
        }

        .glass {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .glass-dark {
            background: rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
        }

        .gradient-text {
            background: linear-gradient(135deg, #DC2626 0%, #FBBF24 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .icon-glow {
            filter: drop-shadow(0 0 10px rgba(220, 38, 38, 0.5));
        }

        .icon-glow-yellow {
            filter: drop-shadow(0 0 10px rgba(251, 191, 36, 0.5));
        }

        .input-glow:focus {
            box-shadow: 0 0 0 3px rgba(220, 38, 38, 0.1), 0 0 20px rgba(220, 38, 38, 0.2);
        }

        .card-hover {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .card-hover:hover {
            transform: translateY(-4px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }
    </style>
</head>

<body class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 min-h-screen">
    <% if (typeof user !=='undefined' && user) { %>
        <%- include('../partials/navbar') %>
            <% } %>

                <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8 relative">
                    <!-- Background Elements -->
                    <div class="absolute top-0 right-0 w-96 h-96 bg-primary-red/10 rounded-full blur-3xl"></div>
                    <div class="absolute bottom-0 left-0 w-96 h-96 bg-primary-yellow/10 rounded-full blur-3xl"></div>
                    
                    <div class="relative z-10">
                        <div class="mb-6 animate-fade-in">
                            <div class="flex items-center space-x-3 mb-2">
                                <div class="relative">
                                    <div
                                        class="absolute inset-0 bg-gradient-to-r from-primary-red to-primary-yellow rounded-xl blur-lg opacity-50">
                                    </div>
                                    <div class="relative bg-gradient-to-r from-primary-red to-primary-yellow p-2 rounded-xl">
                                        <i class="fas fa-calculator text-white text-xl icon-glow"></i>
                                    </div>
                                </div>
                                <div>
                                    <h1 class="text-3xl font-black text-white">Calculadora de <span class="gradient-text">INSS</span></h1>
                                    <p class="mt-1 text-white/70 text-sm font-medium">Cálculo progressivo conforme Lei nº 8.212/1991 - Art. 28</p>
                                </div>
                            </div>
                        </div>

                        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                            <!-- Formulário -->
                            <div class="lg:col-span-1">
                                <div class="glass rounded-2xl shadow-2xl p-4 sm:p-6 border border-white/20 backdrop-blur-xl card-hover animate-slide-up">
                                    <div class="flex items-center mb-4 sm:mb-6">
                                        <div class="relative mr-3">
                                            <div
                                                class="absolute inset-0 bg-gradient-to-r from-primary-red to-primary-yellow rounded-xl blur opacity-50">
                                            </div>
                                            <div class="relative bg-gradient-to-r from-primary-red to-primary-yellow p-2 rounded-xl">
                                                <i class="fas fa-calculator text-white text-xl icon-glow"></i>
                                            </div>
                                        </div>
                                        <h2 class="text-xl sm:text-2xl font-black text-white">
                                            Dados de <span class="gradient-text">Entrada</span>
                                        </h2>
                                    </div>

                                    <% if (error) { %>
                                        <div class="glass-dark border-l-4 border-red-500 text-red-200 px-4 py-3 rounded-lg mb-4 flex items-start">
                                            <i class="fas fa-exclamation-circle mr-2 mt-0.5 flex-shrink-0"></i>
                                            <div>
                                                <strong class="block">Erro:</strong>
                                                <span class="text-sm"><%= error %></span>
                                            </div>
                                        </div>
                                        <% } %>

                                        <form method="POST" action="/inss/calcular" class="space-y-4">
                                            <% if (typeof csrfToken !=='undefined' && csrfToken) { %>
                                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                <% } %>
                                            <div>
                                                <label for="ano"
                                                    class="block text-sm font-semibold text-white/90 mb-2">
                                                    <i class="fas fa-calendar text-primary-yellow mr-2 icon-glow-yellow"></i>Ano da Tabela
                                                </label>
                                                <select id="ano" name="ano"
                                                    class="w-full px-4 py-3 glass border border-white/20 rounded-xl text-white focus:ring-2 focus:ring-primary-red focus:border-primary-red transition outline-none input-glow backdrop-blur-sm">
                                                    <option value="" class="bg-gray-800">Ano Atual (Automático)</option>
                                                    <option value="2026" selected class="bg-gray-800">2026 (Estimado)</option>
                                                    <option value="2025" class="bg-gray-800">2025 (Oficial)</option>
                                                    <option value="2024" class="bg-gray-800">2024</option>
                                                </select>
                                                <p class="text-xs text-white/70 mt-1">Selecione o ano da tabela
                                                    de INSS</p>
                                            </div>

                                            <div>
                                                <label for="salarioBruto"
                                                    class="block text-sm font-semibold text-white/90 mb-2">
                                                    <i class="fas fa-dollar-sign text-primary-yellow mr-2 icon-glow-yellow"></i>Salário Bruto (R$)
                                                </label>
                                                <input type="number" id="salarioBruto" name="salarioBruto"
                                                    step="0.01" min="0" required
                                                    class="w-full px-4 py-3 glass border border-white/20 rounded-xl text-white placeholder-white/50 focus:ring-2 focus:ring-primary-red focus:border-primary-red transition outline-none input-glow backdrop-blur-sm"
                                                    placeholder="0.00">
                                            </div>

                                            <div class="flex items-center">
                                                <input type="checkbox" id="proLabore" name="proLabore"
                                                    value="true"
                                                    class="h-5 w-5 text-primary-red focus:ring-primary-red border-white/30 rounded cursor-pointer">
                                                <label for="proLabore" class="ml-2 block text-sm text-white/90">
                                                    Pró-labore (alíquota fixa de 11%)
                                                </label>
                                            </div>

                                            <button type="submit"
                                                class="group relative w-full bg-gradient-to-r from-primary-red to-primary-yellow text-white py-3 rounded-xl font-bold hover:shadow-2xl hover:shadow-primary-yellow/50 transition-all transform hover:scale-105 overflow-hidden">
                                                <span class="relative z-10 flex items-center justify-center">
                                                    <i class="fas fa-calculator mr-2"></i>Calcular
                                                </span>
                                                <div
                                                    class="absolute inset-0 bg-gradient-to-r from-primary-yellow to-primary-red opacity-0 group-hover:opacity-100 transition-opacity">
                                                </div>
                                            </button>
                                    </form>
                                </div>
                            </div>

                            <!-- Resultado -->
                            <div class="lg:col-span-2 animate-slide-up" style="animation-delay: 0.1s;">
                                <% if (resultado) { %>
                                    <!-- Abas -->
                                    <div class="glass rounded-2xl shadow-2xl border border-white/20 backdrop-blur-xl card-hover">
                                        <div class="border-b border-white/20">
                                            <nav class="flex -mb-px">
                                                <button type="button" data-tab="calculadora" id="tab-calculadora"
                                                    class="tab-button active px-6 py-3 text-sm font-bold border-b-2 border-primary-red text-primary-red cursor-pointer">
                                                    <i class="fas fa-calculator mr-2 icon-glow"></i>Calculadora
                                                </button>
                                                <button type="button" data-tab="memoria" id="tab-memoria"
                                                    class="tab-button px-6 py-3 text-sm font-medium border-b-2 border-transparent text-white/70 hover:text-white cursor-pointer transition-colors">
                                                    <i class="fas fa-list-ol mr-2"></i>Memória de Cálculo
                                                </button>
                                                <button type="button" data-tab="base-legal" id="tab-base-legal"
                                                    class="tab-button px-6 py-3 text-sm font-medium border-b-2 border-transparent text-white/70 hover:text-white cursor-pointer transition-colors">
                                                    <i class="fas fa-gavel mr-2"></i>Base Legal
                                                </button>
                                            </nav>
                                        </div>

                                    <div class="p-4 sm:p-6">
                                        <!-- Aba Calculadora -->
                                        <div id="content-calculadora" class="tab-content">
                                            <div
                                                class="bg-gradient-to-r from-primary-red to-primary-yellow rounded-lg p-6 text-white mb-6">
                                                <h3 class="text-2xl font-bold mb-2">Resultado do Cálculo</h3>
                                                <div class="mb-4">
                                                    <p class="text-sm opacity-90">Tabela de INSS</p>
                                                    <p class="text-lg font-semibold">
                                                        <%= resultado.ano || '2025' %> - Teto: R$ <%= (resultado.teto ||
                                                                8157.41).toFixed(2) %>
                                                    </p>
                                                </div>
                                                <div class="grid grid-cols-2 gap-4 mt-4">
                                                    <div>
                                                        <p class="text-sm opacity-90">Salário Bruto</p>
                                                        <p class="text-2xl font-bold">R$ <%=
                                                                resultado.salarioBruto.toFixed(2) %>
                                                        </p>
                                                    </div>
                                                    <div>
                                                        <p class="text-sm opacity-90">Valor INSS</p>
                                                        <p class="text-2xl font-bold">R$ <%=
                                                                resultado.valorINSS.toFixed(2) %>
                                                        </p>
                                                    </div>
                                                    <div class="col-span-2">
                                                        <p class="text-sm opacity-90">Alíquota Efetiva</p>
                                                        <p class="text-xl font-bold">
                                                            <%= resultado.aliquotaEfetiva.toFixed(2) %>%
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-4">
                                                <p class="text-sm text-yellow-800 mb-2">
                                                    <i class="fas fa-info-circle mr-2"></i>
                                                    <strong>Educação:</strong> O INSS é calculado de forma progressiva,
                                                    aplicando diferentes alíquotas sobre cada faixa do salário.
                                                </p>
                                                <% if (resultado.ano===2026) { %>
                                                    <p class="text-xs text-yellow-700 italic">
                                                        <i class="fas fa-exclamation-triangle mr-1"></i>
                                                        <strong>Nota:</strong> Valores de 2026 são estimados. A tabela
                                                        oficial será publicada em janeiro de 2026.
                                                    </p>
                                                    <% } %>
                                            </div>
                                        </div>

                                        <!-- Aba Memória -->
                                        <div id="content-memoria" class="tab-content hidden">
                                            <h3 class="text-xl font-bold text-gray-900 mb-4">Memória de Cálculo Passo a
                                                Passo</h3>
                                            <div class="space-y-3">
                                                <% resultado.memoria.forEach(passo=> { %>
                                                    <div
                                                        class="bg-gray-50 rounded-lg p-4 border-l-4 border-primary-red">
                                                        <div class="flex items-start">
                                                            <span
                                                                class="bg-primary-red text-white rounded-full w-8 h-8 flex items-center justify-center font-bold mr-3">
                                                                <%= passo.passo %>
                                                            </span>
                                                            <div class="flex-1">
                                                                <p class="font-semibold text-gray-900">
                                                                    <%= passo.descricao %>
                                                                </p>
                                                                <% if (passo.calculo) { %>
                                                                    <p class="text-sm text-gray-600 mt-1">
                                                                        <%= passo.calculo %>
                                                                    </p>
                                                                    <% } %>
                                                                        <% if (passo.valor) { %>
                                                                            <p class="text-primary-red font-bold mt-2">
                                                                                R$ <%= passo.valor %>
                                                                            </p>
                                                                            <% } %>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <% }); %>
                                            </div>
                                        </div>

                                        <!-- Aba Base Legal -->
                                        <div id="content-base-legal" class="tab-content hidden">
                                            <div class="flex justify-between items-center mb-4">
                                                <h3 class="text-xl font-bold text-gray-900">Base Legal</h3>
                                            </div>

                                            <!-- Tabela Completa de INSS -->
                                            <% if (resultado.tabelaFaixas) { %>
                                                <div class="bg-white rounded-lg shadow-md p-6 mb-6">
                                                    <h4 class="font-bold text-lg mb-4">Tabela de Contribuição do INSS -
                                                        Ano <%= resultado.ano || new Date().getFullYear() %>
                                                    </h4>
                                                    <div class="overflow-x-auto">
                                                        <table class="min-w-full divide-y divide-gray-200">
                                                            <thead class="bg-gray-50">
                                                                <tr>
                                                                    <th
                                                                        class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                                                                        Faixa</th>
                                                                    <th
                                                                        class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                                                                        Salário de Contribuição</th>
                                                                    <th
                                                                        class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">
                                                                        Alíquota</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody class="bg-white divide-y divide-gray-200">
                                                                <% let faixaAnterior=0; %>
                                                                    <% resultado.tabelaFaixas.forEach((faixa, index)=> {
                                                                        %>
                                                                        <tr
                                                                            class="<%= index % 2 === 0 ? 'bg-white' : 'bg-gray-50' %>">
                                                                            <td
                                                                                class="px-4 py-3 text-sm font-medium text-gray-900">
                                                                                <%= index + 1 %>
                                                                            </td>
                                                                            <td class="px-4 py-3 text-sm text-gray-700">
                                                                                <% if (index===0) { %>
                                                                                    Até R$ <%= faixa.limite.toFixed(2)
                                                                                        %>
                                                                                        <% } else { %>
                                                                                            De R$ <%=
                                                                                                faixaAnterior.toFixed(2)
                                                                                                %> até R$ <%=
                                                                                                    faixa.limite.toFixed(2)
                                                                                                    %>
                                                                                                    <% } %>
                                                                            </td>
                                                                            <td
                                                                                class="px-4 py-3 text-sm font-bold text-primary-red">
                                                                                <%= faixa.aliquota %>%
                                                                            </td>
                                                                        </tr>
                                                                        <% faixaAnterior=faixa.limite; %>
                                                                            <% }); %>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                    <p class="text-sm text-gray-600 mt-4">
                                                        <strong>Teto Previdenciário:</strong> R$ <%= (resultado.teto ||
                                                            8157.41).toFixed(2) %>
                                                    </p>
                                                </div>
                                                <% } %>

                                                    <!-- Lei Completa -->
                                                    <div class="bg-gray-50 rounded-lg p-6">
                                                        <h4 class="font-bold text-lg text-gray-900 mb-2">
                                                            <%= resultado.baseLegal.titulo %>
                                                        </h4>
                                                        <p class="text-gray-700 mb-4">
                                                            <strong>Artigo:</strong>
                                                            <strong><%= resultado.baseLegal.artigo %></strong>
                                                        </p>
                                                        <% if (resultado.baseLegal.textoCompleto) { %>
                                                            <div
                                                                class="text-gray-700 leading-relaxed whitespace-pre-line">
                                                                <%= resultado.baseLegal.textoCompleto %>
                                                            </div>
                                                            <% } else { %>
                                                                <p class="text-gray-600">
                                                                    <%= resultado.baseLegal.descricao %>
                                                                </p>
                                                                <% } %>
                                                    </div>
                                        </div>
                                    </div>
                                </div>
                                <% } else { %>
                                    <div class="bg-white rounded-lg shadow-md p-12 text-center">
                                        <i class="fas fa-calculator text-gray-300 text-6xl mb-4"></i>
                                        <p class="text-gray-600">Preencha os dados ao lado para calcular o INSS</p>
                                    </div>
                                    <% } %>
                        </div>
                    </div>
                </main>

                <script>
                    // Função para trocar abas - DEFINIDA GLOBALMENTE
                    window.showTab = function (tabName) {
                        // Esconde TODAS as abas de conteúdo
                        var allContents = document.querySelectorAll('.tab-content');
                        for (var i = 0; i < allContents.length; i++) {
                            allContents[i].classList.add('hidden');
                        }

                        // Remove estilo ativo de TODOS os botões
                        var allButtons = document.querySelectorAll('.tab-button');
                        for (var j = 0; j < allButtons.length; j++) {
                            allButtons[j].classList.remove('active', 'border-primary-red', 'text-primary-red');
                            allButtons[j].classList.add('border-transparent', 'text-gray-500');
                        }

                        // Mostra a aba selecionada
                        var contentElement = document.getElementById('content-' + tabName);
                        if (contentElement) {
                            contentElement.classList.remove('hidden');
                        }

                        // Ativa o botão correspondente
                        var button = document.getElementById('tab-' + tabName);
                        if (button) {
                            button.classList.add('active', 'border-primary-red', 'text-primary-red');
                            button.classList.remove('border-transparent', 'text-gray-500');
                        }
                    };

                    // Inicializa quando a página carregar
                    document.addEventListener('DOMContentLoaded', function () {
                        // Adiciona event listeners para os botões de aba
                        var tabButtons = document.querySelectorAll('.tab-button[data-tab]');
                        tabButtons.forEach(function (button) {
                            button.addEventListener('click', function () {
                                var tabName = this.getAttribute('data-tab');
                                if (window.showTab) {
                                    window.showTab(tabName);
                                }
                            });
                        });

                        // Exibe a primeira aba ativa
                        var primeiraAba = document.querySelector('.tab-button.active');
                        if (primeiraAba) {
                            var tabName = primeiraAba.getAttribute('data-tab') || primeiraAba.id.replace('tab-', '');
                            if (window.showTab) {
                                window.showTab(tabName);
                            }
                        }
                    });
                </script>
</body>

