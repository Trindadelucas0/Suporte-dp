<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: { red: '#DC2626', yellow: '#FBBF24' }
                    },
                    animation: {
                        'float': 'float 6s ease-in-out infinite',
                        'pulse-slow': 'pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite',
                        'gradient': 'gradient 15s ease infinite',
                        'slide-up': 'slideUp 0.5s ease-out',
                        'fade-in': 'fadeIn 0.6s ease-out',
                    },
                    keyframes: {
                        float: {
                            '0%, 100%': { transform: 'translateY(0px)' },
                            '50%': { transform: 'translateY(-20px)' }
                        },
                        gradient: {
                            '0%, 100%': { backgroundPosition: '0% 50%' },
                            '50%': { backgroundPosition: '100% 50%' }
                        },
                        slideUp: {
                            '0%': { transform: 'translateY(30px)', opacity: '0' },
                            '100%': { transform: 'translateY(0)', opacity: '1' }
                        },
                        fadeIn: {
                            '0%': { opacity: '0' },
                            '100%': { opacity: '1' }
                        }
                    }
                }
            }
        }
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/loading.css">
    <style>
        * {
            font-family: 'Inter', sans-serif;
        }

        .glass {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .glass-dark {
            background: rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
        }

        .gradient-text {
            background: linear-gradient(135deg, #DC2626 0%, #FBBF24 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .icon-glow {
            filter: drop-shadow(0 0 10px rgba(220, 38, 38, 0.5));
        }

        .icon-glow-yellow {
            filter: drop-shadow(0 0 10px rgba(251, 191, 36, 0.5));
        }

        .input-glow:focus {
            box-shadow: 0 0 0 3px rgba(220, 38, 38, 0.1), 0 0 20px rgba(220, 38, 38, 0.2);
        }

        .card-hover {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .card-hover:hover {
            transform: translateY(-4px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }
    </style>
    <!-- Favicon com as letras "DP" nas cores do sistema (Vermelho #DC2626 e Amarelo #FBBF24) -->
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 200 200'%3E%3Cdefs%3E%3ClinearGradient id='grad' x1='0%25' y1='0%25' x2='100%25' y2='100%25'%3E%3Cstop offset='0%25' style='stop-color:%23DC2626;stop-opacity:1' /%3E%3Cstop offset='100%25' style='stop-color:%23FBBF24;stop-opacity:1' /%3E%3C/linearGradient%3E%3C/defs%3E%3Crect width='200' height='200' rx='20' fill='url(%23grad)'/%3E%3Ctext x='100' y='140' font-family='Arial, sans-serif' font-size='120' font-weight='bold' text-anchor='middle' fill='white'%3EDP%3C/text%3E%3C/svg%3E" />
    <link rel="apple-touch-icon" href="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 200 200'%3E%3Cdefs%3E%3ClinearGradient id='grad' x1='0%25' y1='0%25' x2='100%25' y2='100%25'%3E%3Cstop offset='0%25' style='stop-color:%23DC2626;stop-opacity:1' /%3E%3Cstop offset='100%25' style='stop-color:%23FBBF24;stop-opacity:1' /%3E%3C/linearGradient%3E%3C/defs%3E%3Crect width='200' height='200' rx='20' fill='url(%23grad)'/%3E%3Ctext x='100' y='140' font-family='Arial, sans-serif' font-size='120' font-weight='bold' text-anchor='middle' fill='white'%3EDP%3C/text%3E%3C/svg%3E" />
</head>
<body class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 min-h-screen">
    <% if (typeof user !== 'undefined' && user) { %>
        <%- include('../partials/navbar') %>
    <% } %>

    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8 relative">
        <!-- Background Elements -->
        <div class="absolute top-0 right-0 w-96 h-96 bg-primary-red/10 rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 left-0 w-96 h-96 bg-primary-yellow/10 rounded-full blur-3xl"></div>
        
        <div class="relative z-10">
            <!-- Cabeçalho com Explicação -->
            <div class="mb-6 animate-fade-in">
                <div class="flex items-center space-x-3 mb-3">
                    <div class="relative">
                        <div
                            class="absolute inset-0 bg-gradient-to-r from-primary-yellow to-primary-red rounded-xl blur-lg opacity-50">
                        </div>
                        <div class="relative bg-gradient-to-r from-primary-yellow to-primary-red p-2 rounded-xl">
                            <i class="fas fa-umbrella-beach text-white text-xl icon-glow-yellow"></i>
                        </div>
                    </div>
                    <div>
                        <h1 class="text-3xl font-black text-white mb-1">
                            Calculadora de <span class="gradient-text">Férias</span>
                        </h1>
                        <p class="text-white/70 text-sm font-medium">CLT Art. 130 e Art. 134 - Cálculo completo com impostos</p>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <!-- Formulário -->
                <div class="lg:col-span-1">
                    <div class="glass rounded-2xl shadow-2xl p-4 sm:p-6 border border-white/20 backdrop-blur-xl card-hover animate-slide-up sticky top-4">
                        <div class="flex items-center mb-4 sm:mb-6">
                            <div class="relative mr-3">
                                <div
                                    class="absolute inset-0 bg-gradient-to-r from-primary-yellow to-primary-red rounded-xl blur opacity-50">
                                </div>
                                <div class="relative bg-gradient-to-r from-primary-yellow to-primary-red p-2 rounded-xl">
                                    <i class="fas fa-edit text-white text-xl icon-glow-yellow"></i>
                                </div>
                            </div>
                            <h2 class="text-xl sm:text-2xl font-black text-white">
                                Dados de <span class="gradient-text">Entrada</span>
                            </h2>
                        </div>
                        
                        <% if (error) { %>
                            <div class="glass-dark border-l-4 border-red-500 text-red-200 px-4 py-3 rounded-lg mb-4 flex items-start">
                                <i class="fas fa-exclamation-circle mr-2 mt-0.5 flex-shrink-0"></i>
                                <div>
                                    <strong class="block">Erro:</strong>
                                    <span class="text-sm"><%= error %></span>
                                </div>
                            </div>
                        <% } %>

                        <form method="POST" action="/ferias/calcular" class="space-y-4">
                            <% if (typeof csrfToken !== 'undefined' && csrfToken) { %>
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <% } %>
                            
                            <!-- Período Aquisitivo -->
                            <div>
                                <label for="periodoAquisitivoInicio" class="block text-sm font-semibold text-white/90 mb-2">
                                    <i class="fas fa-calendar-alt text-primary-red mr-2 icon-glow"></i>
                                    Período Aquisitivo <i class="fas fa-info-circle text-blue-400 ml-1 cursor-help" title="Período de 12 meses consecutivos trabalhados que dá direito às férias. Ao informar a data início, o sistema calcula automaticamente a data fim (12 meses depois). Conforme CLT Art. 130"></i>
                                </label>
                                <div class="grid grid-cols-2 gap-2">
                                    <div>
                                        <input type="date" id="periodoAquisitivoInicio" name="periodoAquisitivoInicio" required
                                            class="w-full px-4 py-3 glass border border-white/20 rounded-xl text-white focus:ring-2 focus:ring-primary-yellow focus:border-primary-yellow transition outline-none input-glow backdrop-blur-sm">
                                    </div>
                                    <div>
                                        <input type="date" id="periodoAquisitivoFim" name="periodoAquisitivoFim" readonly
                                            class="w-full px-4 py-3 glass border border-white/20 rounded-xl text-white/70 bg-white/5 backdrop-blur-sm">
                                    </div>
                                </div>
                            </div>

                            <!-- Período de Concessão (automático) -->
                            <div>
                                <label class="block text-sm font-semibold text-white/90 mb-2">
                                    <i class="fas fa-calendar-check text-primary-yellow mr-2 icon-glow-yellow"></i>
                                    Período de Concessão <i class="fas fa-info-circle text-blue-400 ml-1 cursor-help" title="Período de 12 meses após o término do período aquisitivo em que o empregado pode tirar as férias. Calculado automaticamente. Conforme CLT Art. 134"></i>
                                </label>
                                <div class="grid grid-cols-2 gap-2">
                                    <input type="date" id="periodoConcessaoInicio" name="periodoConcessaoInicio" readonly
                                        class="w-full px-4 py-3 glass border border-white/20 rounded-xl text-white/70 bg-white/5 backdrop-blur-sm">
                                    <input type="date" id="periodoConcessaoFim" name="periodoConcessaoFim" readonly
                                        class="w-full px-4 py-3 glass border border-white/20 rounded-xl text-white/70 bg-white/5 backdrop-blur-sm">
                                </div>
                            </div>

                            <!-- Data da Concessão (período que vai tirar as férias) -->
                            <div>
                                <label class="block text-sm font-semibold text-white/90 mb-2">
                                    <i class="fas fa-calendar-day text-primary-yellow mr-2 icon-glow-yellow"></i>
                                    Data da Concessão <i class="fas fa-info-circle text-blue-400 ml-1 cursor-help" title="Período efetivo em que o funcionário vai tirar as férias (data início e fim). Deve estar dentro do período de concessão e pode ter até 30 dias corridos"></i>
                                </label>
                                <div class="grid grid-cols-2 gap-2">
                                    <input type="date" id="dataConcessaoInicio" name="dataConcessaoInicio" required
                                        class="w-full px-4 py-3 glass border border-white/20 rounded-xl text-white focus:ring-2 focus:ring-primary-yellow focus:border-primary-yellow transition outline-none input-glow backdrop-blur-sm">
                                    <input type="date" id="dataConcessaoFim" name="dataConcessaoFim" required
                                        class="w-full px-4 py-3 glass border border-white/20 rounded-xl text-white focus:ring-2 focus:ring-primary-yellow focus:border-primary-yellow transition outline-none input-glow backdrop-blur-sm">
                                </div>
                            </div>

                            <!-- Salário -->
                            <div>
                                <label for="salario" class="block text-sm font-semibold text-white/90 mb-2">
                                    <i class="fas fa-dollar-sign text-primary-yellow mr-2 icon-glow-yellow"></i>
                                    Salário (R$) *
                                </label>
                                <input type="number" id="salario" name="salario" step="0.01" min="0" required
                                    class="w-full px-4 py-3 glass border border-white/20 rounded-xl text-white placeholder-white/50 focus:ring-2 focus:ring-primary-yellow focus:border-primary-yellow transition outline-none input-glow backdrop-blur-sm"
                                    placeholder="0.00">
                            </div>

                            <!-- Deseja vender 1/3 das férias -->
                            <div class="flex items-center">
                                <input type="checkbox" id="venderUmTerco" name="venderUmTerco" value="true"
                                    class="h-5 w-5 text-primary-red focus:ring-primary-red border-white/30 rounded cursor-pointer">
                                <label for="venderUmTerco" class="ml-2 block text-sm text-white/90">
                                    Deseja vender 1/3 das férias?
                                </label>
                            </div>

                            <!-- Dedução do IR -->
                            <div class="glass-dark border-l-4 border-blue-500/80 rounded-lg p-3">
                                <label class="block text-sm font-semibold text-white/90 mb-3">
                                    <i class="fas fa-file-invoice-dollar text-blue-400 mr-2"></i>
                                    Dedução do IR
                                </label>
                                
                                <div class="mb-3">
                                    <label for="dependentes" class="block text-xs font-semibold text-white/80 mb-1">
                                        Quantos dependentes possui?
                                    </label>
                                    <input type="number" id="dependentes" name="dependentes" min="0" value="0"
                                        class="w-full px-3 py-2 glass border border-white/20 rounded-lg text-white placeholder-white/50 focus:ring-2 focus:ring-primary-yellow focus:border-primary-yellow transition outline-none backdrop-blur-sm"
                                        placeholder="0">
                                </div>

                                <div>
                                    <label for="pensaoAlimenticia" class="block text-xs font-semibold text-white/80 mb-1">
                                        Qual o valor total referente à pensão alimentícia? (R$)
                                    </label>
                                    <input type="number" id="pensaoAlimenticia" name="pensaoAlimenticia" step="0.01" min="0" value="0"
                                        class="w-full px-3 py-2 glass border border-white/20 rounded-lg text-white placeholder-white/50 focus:ring-2 focus:ring-primary-yellow focus:border-primary-yellow transition outline-none backdrop-blur-sm"
                                        placeholder="0.00">
                                </div>
                            </div>

                            <!-- Faltas injustificadas -->
                            <div>
                                <label class="block text-sm font-semibold text-white/90 mb-2">
                                    <i class="fas fa-exclamation-triangle text-primary-red mr-2 icon-glow"></i>
                                    O empregado faltou injustificadamente no período aquisitivo de férias?
                                </label>
                                <div class="flex items-center mb-2">
                                    <input type="radio" id="faltouSim" name="faltouInjustificada" value="sim"
                                        class="h-4 w-4 text-primary-red focus:ring-primary-red border-white/30 cursor-pointer">
                                    <label for="faltouSim" class="ml-2 text-sm text-white/90">Sim</label>
                                    <input type="radio" id="faltouNao" name="faltouInjustificada" value="nao" checked
                                        class="h-4 w-4 text-primary-red focus:ring-primary-red border-white/30 ml-4 cursor-pointer">
                                    <label for="faltouNao" class="ml-2 text-sm text-white/90">Não</label>
                                </div>
                                <div id="diasFaltasContainer" class="hidden">
                                    <label for="diasFaltas" class="block text-xs font-semibold text-white/80 mb-1">
                                        Quantidade de dias:
                                    </label>
                                    <input type="number" id="diasFaltas" name="diasFaltas" min="0" value="0"
                                        class="w-full px-3 py-2 glass border border-white/20 rounded-lg text-white placeholder-white/50 focus:ring-2 focus:ring-primary-yellow focus:border-primary-yellow transition outline-none backdrop-blur-sm"
                                        placeholder="0">
                                </div>
                            </div>

                            <!-- Afastamento por auxílio-doença -->
                            <div>
                                <label class="block text-sm font-semibold text-white/90 mb-2">
                                    <i class="fas fa-hospital text-primary-red mr-2 icon-glow"></i>
                                    Ocorreu afastamento motivado por benefício de auxílio-doença previdenciário?
                                </label>
                                <div class="flex items-center mb-2">
                                    <input type="radio" id="afastamentoSim" name="afastamentoAuxilioDoenca" value="sim"
                                        class="h-4 w-4 text-primary-red focus:ring-primary-red border-white/30 cursor-pointer">
                                    <label for="afastamentoSim" class="ml-2 text-sm text-white/90">Sim</label>
                                    <input type="radio" id="afastamentoNao" name="afastamentoAuxilioDoenca" value="nao" checked
                                        class="h-4 w-4 text-primary-red focus:ring-primary-red border-white/30 ml-4 cursor-pointer">
                                    <label for="afastamentoNao" class="ml-2 text-sm text-white/90">Não</label>
                                </div>
                                <div id="afastamentoContainer" class="hidden grid grid-cols-2 gap-2">
                                    <div>
                                        <label for="afastamentoInicio" class="block text-xs font-semibold text-white/80 mb-1">
                                            Data Início:
                                        </label>
                                        <input type="date" id="afastamentoInicio" name="afastamentoInicio"
                                            class="w-full px-3 py-2 glass border border-white/20 rounded-lg text-white focus:ring-2 focus:ring-primary-yellow focus:border-primary-yellow transition outline-none backdrop-blur-sm">
                                    </div>
                                    <div>
                                        <label for="afastamentoFim" class="block text-xs font-semibold text-white/80 mb-1">
                                            Data Fim:
                                        </label>
                                        <input type="date" id="afastamentoFim" name="afastamentoFim"
                                            class="w-full px-3 py-2 glass border border-white/20 rounded-lg text-white focus:ring-2 focus:ring-primary-yellow focus:border-primary-yellow transition outline-none backdrop-blur-sm">
                                    </div>
                                </div>
                            </div>

                            <button type="submit" 
                                    class="group relative w-full bg-gradient-to-r from-primary-yellow to-primary-red text-white py-4 rounded-xl font-bold hover:shadow-2xl hover:shadow-primary-yellow/50 transition-all transform hover:scale-105 overflow-hidden">
                                <span class="relative z-10 flex items-center justify-center">
                                    <i class="fas fa-umbrella-beach mr-2"></i>Calcular Férias
                                </span>
                                <div
                                    class="absolute inset-0 bg-gradient-to-r from-primary-red to-primary-yellow opacity-0 group-hover:opacity-100 transition-opacity">
                                </div>
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Resultado -->
                <div class="lg:col-span-2 animate-slide-up" style="animation-delay: 0.1s;">
                    <% if (resultado) { %>
                        <!-- Resultado Principal -->
                        <div class="glass rounded-2xl shadow-2xl p-4 sm:p-6 border border-white/20 backdrop-blur-xl card-hover mb-6">
                            <div class="flex justify-between items-center mb-4">
                                <h3 class="text-2xl font-black text-white">
                                    <i class="fas fa-umbrella-beach mr-2 icon-glow-yellow"></i>
                                    Resultado do <span class="gradient-text">Cálculo</span>
                                </h3>
                                <a href="/ferias" class="px-4 py-2 bg-primary-red text-white rounded-lg hover:bg-primary-red/80 transition">
                                    Novo Cálculo
                                </a>
                            </div>

                            <!-- Informações do Período -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                                <div class="glass-dark rounded-lg p-4">
                                    <p class="text-sm text-white/70 mb-1">Período Aquisitivo</p>
                                    <p class="text-white font-semibold">
                                        <%= resultado.periodoAquisitivoFormatado.inicio %> a 
                                        <%= resultado.periodoAquisitivoFormatado.fim %>
                                    </p>
                                </div>
                                <div class="glass-dark rounded-lg p-4">
                                    <p class="text-sm text-white/70 mb-1">Data Concessão</p>
                                    <p class="text-white font-semibold">
                                        <%= resultado.dataConcessaoFormatada %>
                                    </p>
                                </div>
                                <div class="glass-dark rounded-lg p-4">
                                    <p class="text-sm text-white/70 mb-1">Salário <i class="fas fa-question-circle text-blue-400 cursor-help" title="Salário bruto do funcionário utilizado como base para o cálculo das férias"></i></p>
                                    <p class="text-white font-semibold">R$ <%= resultado.salario.toFixed(2) %></p>
                                </div>
                                <div class="glass-dark rounded-lg p-4">
                                    <p class="text-sm text-white/70 mb-1">Dias de Férias</p>
                                    <p class="text-white font-semibold"><%= resultado.diasFerias %></p>
                                </div>
                            </div>

                            <!-- Valores Calculados -->
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                                <div class="glass-dark rounded-lg p-4">
                                    <p class="text-sm text-white/70 mb-1">Valor das Férias <i class="fas fa-question-circle text-blue-400 cursor-help" title="Valor calculado proporcionalmente aos dias de férias: (Salário ÷ 30) × Dias de Férias. Utiliza divisor padrão de 30 dias conforme CLT Art. 64"></i></p>
                                    <p class="text-2xl text-white font-bold">R$ <%= resultado.valorFerias.toFixed(2) %></p>
                                </div>
                                <div class="glass-dark rounded-lg p-4">
                                    <p class="text-sm text-white/70 mb-1">Adicional de 1/3</p>
                                    <p class="text-2xl text-white font-bold">R$ <%= resultado.adicionalUmTerco.toFixed(2) %></p>
                                </div>
                                <% if (resultado.abonoPecuniario > 0) { %>
                                <div class="glass-dark rounded-lg p-4">
                                    <p class="text-sm text-white/70 mb-1">Abono Pecuniário</p>
                                    <p class="text-2xl text-white font-bold">R$ <%= resultado.abonoPecuniario.toFixed(2) %></p>
                                </div>
                                <% } %>
                                <div class="glass-dark rounded-lg p-4">
                                    <p class="text-sm text-white/70 mb-1">INSS <i class="fas fa-question-circle text-blue-400 cursor-help" title="Contribuição previdenciária calculada sobre a base de cálculo (Valor das Férias + Adicional de 1/3). Desconto obrigatório conforme tabela progressiva do INSS"></i></p>
                                    <p class="text-2xl text-white font-bold">R$ <%= resultado.valorINSS.toFixed(2) %></p>
                                </div>
                                <div class="glass-dark rounded-lg p-4">
                                    <p class="text-sm text-white/70 mb-1">IRPF <i class="fas fa-question-circle text-blue-400 cursor-help" title="Imposto de Renda Retido na Fonte calculado sobre a base tributável (após desconto do INSS), considerando dependentes e pensão alimentícia informados"></i></p>
                                    <p class="text-2xl text-white font-bold">R$ <%= resultado.valorIRRF.toFixed(2) %></p>
                                </div>
                                <div class="glass-dark rounded-lg p-4">
                                    <p class="text-sm text-white/70 mb-1">IRPF - Desconto Simplificado <i class="fas fa-question-circle text-blue-400 cursor-help" title="Imposto de Renda calculado com dedução simplificada de R$ 607,20 (Lei 15.191/2025). Esta opção substitui todas as deduções legais (INSS, dependentes, pensão) e pode resultar em menor imposto a pagar"></i></p>
                                    <p class="text-2xl text-white font-bold">R$ <%= resultado.valorIRRFSimplificado.toFixed(2) %></p>
                                </div>
                            </div>

                            <!-- Total -->
                            <div class="glass-dark border-t-2 border-primary-yellow/50 rounded-lg p-4 mb-6">
                                <div class="flex justify-between items-center">
                                    <p class="text-lg text-white font-semibold">Total</p>
                                    <p class="text-3xl text-primary-yellow font-black">R$ <%= resultado.total.toFixed(2) %></p>
                                </div>
                            </div>

                            <!-- Nota sobre Divisor -->
                            <div class="glass-dark border-l-4 border-yellow-500/80 rounded-lg p-4 mb-6">
                                <p class="text-sm text-white/90">
                                    Este simulador utiliza como divisor a quantidade padrão de <strong class="text-primary-yellow">30 dias</strong>, não contemplando, nesta versão, cálculo para 31, 29 ou 28 dias. Para fins de detalhamento da memória de cálculo e preenchimento do eSocial, deve-se considerar como divisor a quantidade de dias do mês em que está sendo efetuado o cálculo da remuneração das férias (<strong class="text-primary-red">28, 29, 30 ou 31 dias</strong>), em que pese o disposto no <strong class="text-primary-red">artigo 64 da CLT</strong>.
                                </p>
                            </div>

                            <!-- Memória de Cálculo Passo a Passo -->
                            <div class="mb-6">
                                <h4 class="text-xl font-black text-white mb-4 flex items-center">
                                    <i class="fas fa-list-ol text-primary-yellow mr-2 icon-glow-yellow"></i>
                                    Memória de <span class="gradient-text">Cálculo</span>
                                </h4>
                                <div class="space-y-3">
                                    <% resultado.memoria.forEach((passo, index) => { %>
                                        <div class="glass rounded-xl p-4 border-l-4 <%= passo.destaque ? 'border-primary-yellow/80 bg-yellow-900/20 shadow-lg' : 'border-white/20' %> card-hover">
                                            <div class="flex items-start">
                                                <span class="flex-shrink-0 bg-gradient-to-r from-primary-red to-primary-yellow text-white rounded-full w-10 h-10 flex items-center justify-center font-bold text-lg mr-4 shadow-lg">
                                                    <%= passo.passo %>
                                                </span>
                                                <div class="flex-1">
                                                    <p class="font-semibold text-white mb-1"><%= passo.descricao %></p>
                                                    <% if (passo.calculo) { %>
                                                        <p class="text-sm text-white/80 glass rounded-xl px-3 py-2 mt-2 border-l-2 border-primary-yellow">
                                                            <i class="fas fa-calculator mr-1 text-primary-yellow icon-glow-yellow"></i>
                                                            <%= passo.calculo %>
                                                        </p>
                                                    <% } %>
                                                    <% if (passo.valor) { %>
                                                        <p class="text-primary-red font-bold mt-2 text-lg icon-glow">
                                                            <i class="fas fa-check-circle mr-1"></i>
                                                            Resultado: <%= passo.valor %>
                                                        </p>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                    <% }); %>
                                </div>
                            </div>

                            <!-- Base Legal -->
                            <div class="glass-dark rounded-xl p-6 border-t-4 border-primary-red/80 backdrop-blur-xl">
                                <h4 class="font-black text-lg text-white mb-4 flex items-center">
                                    <i class="fas fa-gavel text-primary-red mr-2 icon-glow"></i>
                                    Base <span class="gradient-text">Legal</span>
                                </h4>
                                <h5 class="font-semibold mb-2 text-white"><%= resultado.baseLegal.titulo %></h5>
                                <p class="text-sm text-white/90 mb-3">
                                    <strong class="text-white">Artigo:</strong> <strong class="text-primary-red"><%= resultado.baseLegal.artigo %></strong>
                                </p>
                                <p class="text-sm text-white/80"><%= resultado.baseLegal.descricao %></p>
                            </div>
                        </div>
                    <% } else { %>
                        <!-- Estado Inicial -->
                        <div class="glass rounded-2xl shadow-xl p-12 text-center border border-white/20 backdrop-blur-xl animate-slide-up">
                            <i class="fas fa-umbrella-beach text-white/30 text-6xl mb-4"></i>
                            <h3 class="text-xl font-black text-white mb-2">Pronto para <span class="gradient-text">Calcular!</span></h3>
                            <p class="text-white/70 mb-4">
                                Preencha os dados ao lado para calcular os avos de férias
                            </p>
                            <div class="glass-dark border-l-4 border-blue-500/80 rounded-xl p-4 max-w-md mx-auto text-left">
                                <p class="text-sm text-blue-200 mb-2 flex items-center">
                                    <i class="fas fa-lightbulb text-blue-400 mr-2 icon-glow"></i>
                                    <strong>Exemplo:</strong>
                                </p>
                                <ul class="text-xs text-white/80 space-y-1 list-disc list-inside">
                                    <li>Admissão: <strong class="text-primary-yellow">01/01/2024</strong></li>
                                    <li>Referência: <strong class="text-primary-yellow">30/06/2024</strong></li>
                                    <li>Resultado: <strong class="text-primary-yellow">6/12 avos</strong> (6 meses completos)</li>
                                </ul>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </main>

    <script>
        // Função para calcular período aquisitivo fim e período de concessão
        function calcularPeriodos() {
            const periodoAquisitivoInicio = document.getElementById('periodoAquisitivoInicio').value;
            
            if (periodoAquisitivoInicio) {
                const inicio = new Date(periodoAquisitivoInicio);
                
                // Período aquisitivo: 12 meses a partir da data início
                const periodoAquisitivoFim = new Date(inicio);
                periodoAquisitivoFim.setMonth(periodoAquisitivoFim.getMonth() + 12);
                periodoAquisitivoFim.setDate(periodoAquisitivoFim.getDate() - 1); // Um dia antes para completar exatamente 12 meses
                
                document.getElementById('periodoAquisitivoFim').value = periodoAquisitivoFim.toISOString().split('T')[0];
                
                // Período de concessão: 12 meses após o fim do período aquisitivo
                const periodoConcessaoInicio = new Date(periodoAquisitivoFim);
                periodoConcessaoInicio.setDate(periodoConcessaoInicio.getDate() + 1);
                
                const periodoConcessaoFim = new Date(periodoConcessaoInicio);
                periodoConcessaoFim.setMonth(periodoConcessaoFim.getMonth() + 12);
                periodoConcessaoFim.setDate(periodoConcessaoFim.getDate() - 1);
                
                document.getElementById('periodoConcessaoInicio').value = periodoConcessaoInicio.toISOString().split('T')[0];
                document.getElementById('periodoConcessaoFim').value = periodoConcessaoFim.toISOString().split('T')[0];
            }
        }

        // Event listener para período aquisitivo início
        document.addEventListener('DOMContentLoaded', function() {
            const periodoAquisitivoInicio = document.getElementById('periodoAquisitivoInicio');
            if (periodoAquisitivoInicio) {
                periodoAquisitivoInicio.addEventListener('change', calcularPeriodos);
            }

            // Mostrar/ocultar campo de dias de faltas
            const faltouSim = document.getElementById('faltouSim');
            const faltouNao = document.getElementById('faltouNao');
            const diasFaltasContainer = document.getElementById('diasFaltasContainer');
            
            if (faltouSim && faltouNao && diasFaltasContainer) {
                faltouSim.addEventListener('change', function() {
                    diasFaltasContainer.classList.toggle('hidden', !this.checked);
                });
                faltouNao.addEventListener('change', function() {
                    diasFaltasContainer.classList.toggle('hidden', this.checked);
                });
            }

            // Mostrar/ocultar campo de afastamento
            const afastamentoSim = document.getElementById('afastamentoSim');
            const afastamentoNao = document.getElementById('afastamentoNao');
            const afastamentoContainer = document.getElementById('afastamentoContainer');
            
            if (afastamentoSim && afastamentoNao && afastamentoContainer) {
                afastamentoSim.addEventListener('change', function() {
                    afastamentoContainer.classList.toggle('hidden', !this.checked);
                });
                afastamentoNao.addEventListener('change', function() {
                    afastamentoContainer.classList.toggle('hidden', this.checked);
                });
            }
        });
    </script>
</body>
</html>

