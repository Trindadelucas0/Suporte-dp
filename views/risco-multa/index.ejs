<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: { red: '#DC2626', yellow: '#FBBF24' }
                    },
                    animation: {
                        'float': 'float 6s ease-in-out infinite',
                        'pulse-slow': 'pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite',
                        'gradient': 'gradient 15s ease infinite',
                        'slide-up': 'slideUp 0.5s ease-out',
                        'fade-in': 'fadeIn 0.6s ease-out',
                    },
                    keyframes: {
                        float: {
                            '0%, 100%': { transform: 'translateY(0px)' },
                            '50%': { transform: 'translateY(-20px)' }
                        },
                        gradient: {
                            '0%, 100%': { backgroundPosition: '0% 50%' },
                            '50%': { backgroundPosition: '100% 50%' }
                        },
                        slideUp: {
                            '0%': { transform: 'translateY(30px)', opacity: '0' },
                            '100%': { transform: 'translateY(0)', opacity: '1' }
                        },
                        fadeIn: {
                            '0%': { opacity: '0' },
                            '100%': { opacity: '1' }
                        }
                    }
                }
            }
        }
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/loading.css">
    <style>
        * {
            font-family: 'Inter', sans-serif;
        }

        .glass {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .glass-dark {
            background: rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
        }

        .gradient-text {
            background: linear-gradient(135deg, #DC2626 0%, #FBBF24 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .icon-glow {
            filter: drop-shadow(0 0 10px rgba(220, 38, 38, 0.5));
        }

        .icon-glow-yellow {
            filter: drop-shadow(0 0 10px rgba(251, 191, 36, 0.5));
        }

        .input-glow:focus {
            box-shadow: 0 0 0 3px rgba(220, 38, 38, 0.1), 0 0 20px rgba(220, 38, 38, 0.2);
        }

        .card-hover {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .card-hover:hover {
            transform: translateY(-4px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }
    </style>
    <!-- Favicon com as letras "DP" nas cores do sistema (Vermelho #DC2626 e Amarelo #FBBF24) -->
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 200 200'%3E%3Cdefs%3E%3ClinearGradient id='grad' x1='0%25' y1='0%25' x2='100%25' y2='100%25'%3E%3Cstop offset='0%25' style='stop-color:%23DC2626;stop-opacity:1' /%3E%3Cstop offset='100%25' style='stop-color:%23FBBF24;stop-opacity:1' /%3E%3C/linearGradient%3E%3C/defs%3E%3Crect width='200' height='200' rx='20' fill='url(%23grad)'/%3E%3Ctext x='100' y='140' font-family='Arial, sans-serif' font-size='120' font-weight='bold' text-anchor='middle' fill='white'%3EDP%3C/text%3E%3C/svg%3E" />
    <link rel="apple-touch-icon" href="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 200 200'%3E%3Cdefs%3E%3ClinearGradient id='grad' x1='0%25' y1='0%25' x2='100%25' y2='100%25'%3E%3Cstop offset='0%25' style='stop-color:%23DC2626;stop-opacity:1' /%3E%3Cstop offset='100%25' style='stop-color:%23FBBF24;stop-opacity:1' /%3E%3C/linearGradient%3E%3C/defs%3E%3Crect width='200' height='200' rx='20' fill='url(%23grad)'/%3E%3Ctext x='100' y='140' font-family='Arial, sans-serif' font-size='120' font-weight='bold' text-anchor='middle' fill='white'%3EDP%3C/text%3E%3C/svg%3E" />
</head>
<body class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 min-h-screen">
    <% if (typeof user !== 'undefined' && user) { %>
        <%- include('../partials/navbar') %>
    <% } %>

    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8 relative">
        <!-- Background Elements -->
        <div class="absolute top-0 right-0 w-96 h-96 bg-primary-red/10 rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 left-0 w-96 h-96 bg-primary-yellow/10 rounded-full blur-3xl"></div>
        
        <div class="relative z-10">
            <div class="mb-6 animate-fade-in">
                <div class="flex items-center space-x-3 mb-3">
                    <div class="relative">
                        <div
                            class="absolute inset-0 bg-gradient-to-r from-primary-yellow to-primary-red rounded-xl blur-lg opacity-50">
                        </div>
                        <div class="relative bg-gradient-to-r from-primary-yellow to-primary-red p-2 rounded-xl">
                            <i class="fas fa-exclamation-triangle text-white text-xl icon-glow-yellow"></i>
                        </div>
                    </div>
                    <div>
                        <h1 class="text-3xl font-black text-white mb-1">
                            Período de Risco <span class="gradient-text">Multa</span> (Data Base)
                        </h1>
                        <p class="text-white/70 text-sm font-medium">Lei nº 7.238/84 – Art 9º</p>
                    </div>
                </div>
                <div class="glass-dark border-l-4 border-blue-500/80 p-4 rounded-xl">
                    <p class="text-white mb-2 flex items-center">
                        <i class="fas fa-info-circle text-blue-400 mr-2 icon-glow"></i>
                        <strong class="text-white">O que é o Período de Risco?</strong>
                    </p>
                    <p class="text-sm text-white/80">
                        O período de risco é de <strong class="text-primary-yellow">exatamente 30 dias que antecedem a data base</strong> do contrato. 
                        Se a dispensa SEM JUSTA CAUSA ocorrer dentro deste período, o empregado terá direito à indenização adicional equivalente a um salário mensal (valor integral) - Lei nº 7.238/84 – Art 9º.
                    </p>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <!-- Formulário -->
                <div class="lg:col-span-1">
                    <div class="glass rounded-2xl shadow-2xl p-4 sm:p-6 border border-white/20 backdrop-blur-xl card-hover animate-slide-up sticky top-4">
                        <div class="flex items-center mb-4 sm:mb-6">
                            <div class="relative mr-3">
                                <div
                                    class="absolute inset-0 bg-gradient-to-r from-primary-yellow to-primary-red rounded-xl blur opacity-50">
                                </div>
                                <div class="relative bg-gradient-to-r from-primary-yellow to-primary-red p-2 rounded-xl">
                                    <i class="fas fa-edit text-white text-xl icon-glow-yellow"></i>
                                </div>
                            </div>
                            <h2 class="text-xl font-black text-white">
                                Dados de <span class="gradient-text">Entrada</span>
                            </h2>
                        </div>
                        
                        <% if (error) { %>
                            <div class="glass-dark border-l-4 border-red-500 text-red-200 px-4 py-3 rounded-lg mb-4 flex items-start">
                                <i class="fas fa-exclamation-circle mr-2 mt-0.5 flex-shrink-0"></i>
                                <div>
                                    <strong class="block">Erro:</strong>
                                    <span class="text-sm"><%= error %></span>
                                </div>
                            </div>
                        <% } %>

                    <form method="POST" action="/risco-multa/calcular" class="space-y-4">
                        <% if (typeof csrfToken !== 'undefined' && csrfToken) { %>
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <% } %>

                        <!-- Dados do Sindicato -->
                        <div>
                            <h3 class="text-sm font-black text-white/90 mb-3 uppercase flex items-center">
                                <i class="fas fa-building text-primary-red mr-2 icon-glow"></i>
                                Dados do Sindicato
                            </h3>
                            
                            <div class="mb-4">
                                <label class="block text-sm font-semibold text-white/90 mb-2">Nome do Sindicato *</label>
                                <input type="text" name="nomeSindicato" required
                                    placeholder="Ex: Sindicato dos Trabalhadores"
                                    class="w-full px-4 py-3 glass border border-white/20 rounded-xl text-white placeholder-white/50 focus:ring-2 focus:ring-primary-red focus:border-primary-red transition outline-none input-glow backdrop-blur-sm">
                            </div>

                            <div class="mb-4">
                                <label class="block text-sm font-semibold text-white/90 mb-2">
                                    <i class="fas fa-id-card text-primary-yellow mr-2 icon-glow-yellow"></i>
                                    CNPJ do Sindicato *
                                </label>
                                <input type="text" name="cnpjSindicato" required
                                    placeholder="00.000.000/0000-00"
                                    maxlength="18"
                                    class="w-full px-4 py-3 glass border border-white/20 rounded-xl text-white placeholder-white/50 focus:ring-2 focus:ring-primary-red focus:border-primary-red transition outline-none input-glow backdrop-blur-sm">
                                <p class="text-xs text-white/70 mt-1">Formato: XX.XXX.XXX/XXXX-XX</p>
                            </div>
                        </div>

                        <!-- Dados do Contrato -->
                        <div class="border-t border-white/20 pt-4">
                            <h3 class="text-sm font-black text-white/90 mb-3 uppercase flex items-center">
                                <i class="fas fa-file-contract text-primary-yellow mr-2 icon-glow-yellow"></i>
                                Dados do Contrato
                            </h3>
                            
                            <div class="mb-4">
                                <label class="block text-sm font-semibold text-white/90 mb-2">
                                    <i class="fas fa-calendar-alt text-primary-red mr-2 icon-glow"></i>
                                    Data Base *
                                </label>
                                <input type="date" name="dataBase" required
                                    class="w-full px-4 py-3 glass border border-white/20 rounded-xl text-white focus:ring-2 focus:ring-primary-red focus:border-primary-red transition outline-none input-glow backdrop-blur-sm">
                                <p class="text-xs text-white/70 mt-1">Data base do contrato</p>
                            </div>
                        </div>

                        <button type="submit" class="group relative w-full bg-gradient-to-r from-primary-red to-primary-yellow text-white py-3 rounded-xl font-bold hover:shadow-2xl hover:shadow-primary-yellow/50 transition-all transform hover:scale-105 overflow-hidden">
                            <span class="relative z-10 flex items-center justify-center">
                                <i class="fas fa-calculator mr-2"></i>
                                Calcular Período de Risco
                            </span>
                            <div
                                class="absolute inset-0 bg-gradient-to-r from-primary-yellow to-primary-red opacity-0 group-hover:opacity-100 transition-opacity">
                            </div>
                        </button>
                    </form>
                </div>
            </div>

            <!-- Resultado -->
            <div class="lg:col-span-2 animate-slide-up" style="animation-delay: 0.1s;">
                <% if (resultado) { %>
                    <div class="glass rounded-2xl shadow-2xl p-4 sm:p-6 border border-white/20 backdrop-blur-xl card-hover mb-6">
                        <!-- Header do Resultado -->
                        <div class="bg-gradient-to-r from-primary-red/40 via-primary-yellow/40 to-primary-red/40 rounded-xl p-6 text-white mb-6 border-4 border-primary-red/80 shadow-2xl shadow-primary-red/30 ring-2 ring-primary-red/50">
                            <h3 class="text-2xl font-black mb-4 flex items-center">
                                <i class="fas fa-calendar-alt mr-2 icon-glow"></i>
                                Período de Risco <span class="gradient-text">Calculado</span>
                            </h3>
                            <p class="text-lg font-semibold opacity-90">
                                Período em que pode ocorrer a multa da data base
                            </p>
                        </div>

                        <!-- Informações do Sindicato -->
                        <div class="glass-dark rounded-xl p-4 mb-6 border border-white/20 backdrop-blur-xl">
                            <h4 class="font-black text-white mb-3 flex items-center">
                                <i class="fas fa-building text-primary-red mr-2 icon-glow"></i>
                                Dados do <span class="gradient-text">Sindicato</span>
                            </h4>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <p class="text-sm text-white/70 mb-1">Nome</p>
                                    <p class="font-semibold text-white"><%= resultado.nomeSindicato %></p>
                                </div>
                                <div>
                                    <p class="text-sm text-white/70 mb-1">CNPJ</p>
                                    <p class="font-semibold text-white"><%= resultado.cnpjSindicato %></p>
                                </div>
                            </div>
                        </div>

                        <!-- Período de Risco -->
                        <div class="glass-dark border-l-4 border-red-500/80 rounded-xl p-6 mb-6 backdrop-blur-xl">
                            <h4 class="font-black text-white mb-4 text-lg flex items-center">
                                <i class="fas fa-exclamation-triangle mr-2 text-red-400 icon-glow"></i>
                                Período de Risco <span class="gradient-text">(30 dias que antecedem a data base)</span>
                            </h4>
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                                <div class="glass rounded-xl p-4 border border-white/20 card-hover">
                                    <p class="text-sm text-white/70 mb-1">Data Base</p>
                                    <p class="text-xl font-black text-white">
                                        <%= new Date(resultado.dataBase + 'T00:00:00').toLocaleDateString('pt-BR') %>
                                    </p>
                                </div>
                                <div class="glass rounded-xl p-4 border border-red-500/50 card-hover bg-red-900/20">
                                    <p class="text-sm text-white/70 mb-1">Início do Risco</p>
                                    <p class="text-xl font-black text-primary-red icon-glow">
                                        <%= new Date(resultado.dataInicioRisco + 'T00:00:00').toLocaleDateString('pt-BR') %>
                                    </p>
                                </div>
                                <div class="glass rounded-xl p-4 border border-red-500/50 card-hover bg-red-900/20">
                                    <p class="text-sm text-white/70 mb-1">Fim do Risco</p>
                                    <p class="text-xl font-black text-primary-red icon-glow">
                                        <%= new Date(resultado.dataFimRisco + 'T00:00:00').toLocaleDateString('pt-BR') %>
                                    </p>
                                </div>
                            </div>
                            <div class="glass-dark border-l-4 border-yellow-500/80 rounded-xl p-4 mb-4 bg-yellow-900/20">
                                <p class="text-sm font-bold text-yellow-200 mb-2 flex items-center">
                                    <i class="fas fa-exclamation-triangle mr-2 text-primary-yellow icon-glow-yellow"></i>
                                    Atenção:
                                </p>
                                <p class="text-yellow-100 mb-2 text-sm">
                                    Se a <strong class="text-white">dispensa SEM JUSTA CAUSA</strong> ocorrer entre 
                                    <strong class="text-primary-yellow"><%= new Date(resultado.dataInicioRisco + 'T00:00:00').toLocaleDateString('pt-BR') %></strong> 
                                    e 
                                    <strong class="text-primary-yellow"><%= new Date(resultado.dataFimRisco + 'T00:00:00').toLocaleDateString('pt-BR') %></strong>, 
                                    o empregado terá direito à <strong class="text-white">indenização adicional equivalente a um salário mensal (valor integral)</strong>.
                                </p>
                                <p class="text-xs text-yellow-200 italic">
                                    <strong>Base Legal:</strong> Lei nº 7.238/84 – Art 9º
                                </p>
                            </div>
                            
                            <!-- Observações sobre Aviso Prévio -->
                            <div class="glass-dark border-l-4 border-blue-500/80 rounded-xl p-4 bg-blue-900/20">
                                <p class="text-sm font-bold text-blue-200 mb-2 flex items-center">
                                    <i class="fas fa-info-circle mr-2 text-blue-400 icon-glow"></i>
                                    Observação Importante:
                                </p>
                                <div class="text-xs text-white/80">
                                    <p>
                                        <strong class="text-white">TST – Súmula 182:</strong> O tempo do aviso prévio, mesmo indenizado, conta-se para efeito da indenização adicional prevista no art. 9º da Lei nº 6.708, de 30.10.1979. (mantida - Res. 121/2003, DJ 19, 20 e 21.11.2003)
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Data de Segurança -->
                        <div class="glass-dark border-l-4 border-green-500/80 rounded-xl p-4 mb-6 bg-green-900/20 backdrop-blur-xl">
                            <p class="font-black text-green-200 mb-2 flex items-center">
                                <i class="fas fa-check-circle mr-2 text-green-400 icon-glow"></i>
                                Data de <span class="gradient-text">Segurança</span>
                            </p>
                            <p class="text-white/90 text-sm">
                                A partir de <strong class="text-primary-yellow"><%= new Date(resultado.dataBase + 'T00:00:00').toLocaleDateString('pt-BR') %></strong> (data base), 
                                não há mais risco de multa por período de risco.
                            </p>
                        </div>

                        <!-- Tabela de Consultas Realizadas -->
                        <% if (typeof consultas !== 'undefined' && consultas && consultas.length > 0) { %>
                            <div class="glass rounded-2xl shadow-xl p-6 mb-6 border border-white/20 backdrop-blur-xl card-hover animate-slide-up" style="animation-delay: 0.2s;">
                                <h4 class="text-xl font-black text-white mb-4 flex items-center">
                                    <i class="fas fa-table text-primary-red mr-2 icon-glow"></i>
                                    Consultas <span class="gradient-text">Realizadas</span>
                                </h4>
                                <div class="overflow-x-auto">
                                    <table class="min-w-full divide-y divide-white/20">
                                        <thead class="bg-white/10">
                                            <tr>
                                                <th class="px-4 py-3 text-left text-xs font-bold text-white/90 uppercase tracking-wider">Sindicato</th>
                                                <th class="px-4 py-3 text-left text-xs font-bold text-white/90 uppercase tracking-wider">CNPJ</th>
                                                <th class="px-4 py-3 text-left text-xs font-bold text-blue-400 uppercase tracking-wider">Data Base</th>
                                                <th class="px-4 py-3 text-left text-xs font-bold text-red-400 uppercase tracking-wider">Período de Risco</th>
                                                <th class="px-4 py-3 text-center text-xs font-bold text-white/90 uppercase tracking-wider">Ações</th>
                                            </tr>
                                        </thead>
                                        <tbody class="bg-white/5 divide-y divide-white/10">
                                            <% consultas.forEach(consulta => { %>
                                                <tr class="hover:bg-white/20 transition-colors">
                                                    <td class="px-4 py-3 whitespace-nowrap text-sm font-semibold text-white">
                                                        <%= consulta.nome_sindicato || '-' %>
                                                    </td>
                                                    <td class="px-4 py-3 whitespace-nowrap text-sm text-white/80">
                                                        <%= consulta.cnpj_sindicato || '-' %>
                                                    </td>
                                                    <td class="px-4 py-3 whitespace-nowrap text-sm font-bold text-blue-400 icon-glow">
                                                        <% 
                                                            // Função helper para formatar data
                                                            function formatarData(data) {
                                                                if (!data) return '-';
                                                                try {
                                                                    // Se já é string no formato YYYY-MM-DD
                                                                    const dataStr = String(data);
                                                                    if (dataStr.match(/^\d{4}-\d{2}-\d{2}/)) {
                                                                        const partes = dataStr.split('T')[0].split('-');
                                                                        return partes[2] + '/' + partes[1] + '/' + partes[0];
                                                                    }
                                                                    // Tenta como Date
                                                                    const dataObj = new Date(dataStr);
                                                                    if (!isNaN(dataObj.getTime())) {
                                                                        return dataObj.toLocaleDateString('pt-BR');
                                                                    }
                                                                    return dataStr.substring(0, 10);
                                                                } catch(e) {
                                                                    return String(data).substring(0, 10);
                                                                }
                                                            }
                                                        %>
                                                        <%= formatarData(consulta.data_base) %>
                                                    </td>
                                                    <td class="px-4 py-3 whitespace-nowrap text-sm font-bold text-red-400 icon-glow">
                                                        <% 
                                                            let periodoTexto = '-';
                                                            if (consulta.data_inicio_risco && consulta.data_fim_risco) {
                                                                const inicioFormatado = formatarData(consulta.data_inicio_risco);
                                                                const fimFormatado = formatarData(consulta.data_fim_risco);
                                                                if (inicioFormatado !== '-' && fimFormatado !== '-') {
                                                                    periodoTexto = inicioFormatado + ' até ' + fimFormatado;
                                                                }
                                                            }
                                                        %>
                                                        <%= periodoTexto %>
                                                    </td>
                                                    <td class="px-4 py-3 whitespace-nowrap text-center">
                                                        <button 
                                                            type="button"
                                                            class="deletar-consulta-btn glass border border-red-500/50 hover:bg-red-900/30 text-red-400 hover:text-red-300 px-3 py-1 rounded-xl text-sm transition-all transform hover:scale-105"
                                                            data-id="<%= consulta.id %>"
                                                            title="Excluir consulta">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        <% } %>
                    </div>
                <% } else { %>
                    <div class="glass rounded-2xl shadow-xl p-12 text-center mb-6 border border-white/20 backdrop-blur-xl animate-slide-up">
                        <i class="fas fa-calculator text-white/30 text-6xl mb-4"></i>
                        <p class="text-white/70 text-lg">Preencha os dados para calcular o período de risco</p>
                    </div>

                    <!-- Tabela de Consultas Realizadas (sem resultado) -->
                    <% if (typeof consultas !== 'undefined' && consultas && consultas.length > 0) { %>
                        <div class="glass rounded-2xl shadow-xl p-6 border border-white/20 backdrop-blur-xl card-hover animate-slide-up" style="animation-delay: 0.2s;">
                            <h4 class="text-xl font-black text-white mb-4 flex items-center">
                                <i class="fas fa-table text-primary-red mr-2 icon-glow"></i>
                                Consultas <span class="gradient-text">Realizadas</span>
                            </h4>
                            <div class="overflow-x-auto">
                                <table class="min-w-full divide-y divide-white/20">
                                    <thead class="bg-white/10">
                                        <tr>
                                            <th class="px-4 py-3 text-left text-xs font-bold text-white/90 uppercase tracking-wider">Sindicato</th>
                                            <th class="px-4 py-3 text-left text-xs font-bold text-white/90 uppercase tracking-wider">CNPJ</th>
                                            <th class="px-4 py-3 text-left text-xs font-bold text-blue-400 uppercase tracking-wider">Data Base</th>
                                            <th class="px-4 py-3 text-left text-xs font-bold text-red-400 uppercase tracking-wider">Período de Risco</th>
                                            <th class="px-4 py-3 text-center text-xs font-bold text-white/90 uppercase tracking-wider">Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody class="bg-white/5 divide-y divide-white/10">
                                        <% 
                                            // Função helper para formatar data (definida uma vez)
                                            function formatarData(data) {
                                                if (!data) return '-';
                                                try {
                                                    const dataStr = String(data);
                                                    if (dataStr.match(/^\d{4}-\d{2}-\d{2}/)) {
                                                        const partes = dataStr.split('T')[0].split('-');
                                                        return partes[2] + '/' + partes[1] + '/' + partes[0];
                                                    }
                                                    const dataObj = new Date(dataStr);
                                                    if (!isNaN(dataObj.getTime())) {
                                                        return dataObj.toLocaleDateString('pt-BR');
                                                    }
                                                    return dataStr.substring(0, 10);
                                                } catch(e) {
                                                    return String(data).substring(0, 10);
                                                }
                                            }
                                        %>
                                        <% consultas.forEach(consulta => { %>
                                            <tr class="hover:bg-white/20 transition-colors">
                                                <td class="px-4 py-3 whitespace-nowrap text-sm font-semibold text-white">
                                                    <%= consulta.nome_sindicato || '-' %>
                                                </td>
                                                <td class="px-4 py-3 whitespace-nowrap text-sm text-white/80">
                                                    <%= consulta.cnpj_sindicato || '-' %>
                                                </td>
                                                <td class="px-4 py-3 whitespace-nowrap text-sm font-bold text-blue-400 icon-glow">
                                                    <%= formatarData(consulta.data_base) %>
                                                </td>
                                                <td class="px-4 py-3 whitespace-nowrap text-sm font-bold text-red-400 icon-glow">
                                                    <% 
                                                        let periodoTexto2 = '-';
                                                        if (consulta.data_inicio_risco && consulta.data_fim_risco) {
                                                            const inicioFormatado = formatarData(consulta.data_inicio_risco);
                                                            const fimFormatado = formatarData(consulta.data_fim_risco);
                                                            if (inicioFormatado !== '-' && fimFormatado !== '-') {
                                                                periodoTexto2 = inicioFormatado + ' até ' + fimFormatado;
                                                            }
                                                        }
                                                    %>
                                                    <%= periodoTexto2 %>
                                                </td>
                                                <td class="px-4 py-3 whitespace-nowrap text-center">
                                                    <button 
                                                        type="button"
                                                        class="deletar-consulta-btn glass border border-red-500/50 hover:bg-red-900/30 text-red-400 hover:text-red-300 px-3 py-1 rounded-xl text-sm transition-all transform hover:scale-105"
                                                        data-id="<%= consulta.id %>"
                                                        title="Excluir consulta">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </div>
    </main>

    <script>
        // Define CSRF token globalmente
        window.csrfToken = '<%= typeof csrfToken !== "undefined" && csrfToken ? csrfToken : "" %>';

        // Máscara CNPJ
        document.querySelector('input[name="cnpjSindicato"]')?.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length <= 14) {
                value = value.replace(/^(\d{2})(\d{3})(\d{3})(\d{4})(\d{2}).*/, '$1.$2.$3/$4-$5');
            }
            e.target.value = value;
        });

        // Função para obter CSRF token
        function getCSRFToken() {
            // Tenta pegar do window.csrfToken (prioridade)
            if (typeof window !== 'undefined' && window.csrfToken) {
                return window.csrfToken;
            }
            
            // Tenta pegar do input hidden no form
            const csrfInput = document.querySelector('input[name="_csrf"]');
            if (csrfInput) return csrfInput.value;
            
            return '';
        }

        // Função para obter headers CSRF
        function getCSRFHeaders() {
            const token = getCSRFToken();
            return {
                'Content-Type': 'application/json',
                'X-CSRF-Token': token
            };
        }

        // Event listeners para botões de excluir
        document.addEventListener('DOMContentLoaded', function() {
            const deletarButtons = document.querySelectorAll('.deletar-consulta-btn');
            
            deletarButtons.forEach(button => {
                button.addEventListener('click', async function() {
                    const consultaId = this.getAttribute('data-id');
                    
                    if (!consultaId) {
                        alert('Erro: ID da consulta não encontrado.');
                        return;
                    }

                    // Confirmação
                    if (!confirm('Tem certeza que deseja excluir esta consulta? Esta ação não pode ser desfeita.')) {
                        return;
                    }

                    // Desabilita o botão durante a requisição
                    this.disabled = true;
                    this.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';

                    try {
                        const response = await fetch(`/risco-multa/${consultaId}`, {
                            method: 'DELETE',
                            headers: getCSRFHeaders()
                        });

                        const data = await response.json();

                        if (data.success) {
                            // Remove a linha da tabela
                            const row = this.closest('tr');
                            row.style.transition = 'opacity 0.3s';
                            row.style.opacity = '0';
                            setTimeout(() => {
                                row.remove();
                                
                                // Verifica se não há mais consultas
                                const tbody = row.closest('tbody');
                                if (tbody && tbody.children.length === 0) {
                                    location.reload(); // Recarrega a página se não houver mais consultas
                                }
                            }, 300);
                        } else {
                            alert('Erro ao excluir consulta: ' + (data.message || 'Erro desconhecido'));
                            this.disabled = false;
                            this.innerHTML = '<i class="fas fa-trash"></i>';
                        }
                    } catch (error) {
                        console.error('Erro ao excluir consulta:', error);
                        alert('Erro ao excluir consulta. Tente novamente.');
                        this.disabled = false;
                        this.innerHTML = '<i class="fas fa-trash"></i>';
                    }
                });
            });
        });
    </script>
</body>
