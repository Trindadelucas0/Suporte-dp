<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: { red: '#DC2626', yellow: '#FBBF24' }
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50 min-h-screen">
    <%- include('../partials/navbar') %>

    <main class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
        <div class="mb-6">
            <h1 class="text-3xl font-bold text-gray-900">
                <i class="fas fa-chart-line text-primary-red mr-2"></i>
                Monitoramento de Cobranças
            </h1>
            <p class="text-gray-600 mt-2">Acompanhe pagamentos, pendências e bloqueios</p>
        </div>

        <!-- Estatísticas Gerais -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
            <!-- Total de Clientes -->
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="p-3 bg-blue-100 rounded-lg">
                        <i class="fas fa-users text-blue-600 text-2xl"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-gray-600 text-sm">Total de Clientes</p>
                        <p class="text-2xl font-bold text-gray-900"><%= typeof stats !== 'undefined' && stats ? (stats.totalClientes || 0) : 0 %></p>
                    </div>
                </div>
            </div>

            <!-- Clientes em Dia -->
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="p-3 bg-green-100 rounded-lg">
                        <i class="fas fa-check-circle text-green-600 text-2xl"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-gray-600 text-sm">Clientes em Dia</p>
                        <p class="text-2xl font-bold text-green-600"><%= typeof stats !== 'undefined' && stats ? (stats.clientesEmDia || 0) : 0 %></p>
                    </div>
                </div>
            </div>

            <!-- Clientes Pendentes -->
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="p-3 bg-yellow-100 rounded-lg">
                        <i class="fas fa-clock text-yellow-600 text-2xl"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-gray-600 text-sm">Pendentes</p>
                        <p class="text-2xl font-bold text-yellow-600"><%= typeof stats !== 'undefined' && stats ? (stats.clientesPendentes || 0) : 0 %></p>
                    </div>
                </div>
            </div>

            <!-- Clientes Bloqueados -->
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="p-3 bg-red-100 rounded-lg">
                        <i class="fas fa-ban text-red-600 text-2xl"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-gray-600 text-sm">Bloqueados</p>
                        <p class="text-2xl font-bold text-red-600"><%= typeof stats !== 'undefined' && stats ? (stats.clientesBloqueados || 0) : 0 %></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Valores -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
            <!-- Cobranças Pagas -->
            <div class="bg-white rounded-lg shadow p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">
                    <i class="fas fa-money-bill-wave text-green-600 mr-2"></i>
                    Pagas (Últimos 30 dias)
                </h3>
                <div class="flex items-baseline">
                    <p class="text-3xl font-bold text-green-600">
                        R$ <%= typeof stats !== 'undefined' && stats && stats.cobrancasPagas ? stats.cobrancasPagas.valorTotal.toFixed(2) : '0.00' %>
                    </p>
                    <p class="ml-2 text-gray-600">
                        (<%= typeof stats !== 'undefined' && stats && stats.cobrancasPagas ? stats.cobrancasPagas.quantidade : 0 %> cobranças)
                    </p>
                </div>
            </div>

            <!-- Cobranças Pendentes -->
            <div class="bg-white rounded-lg shadow p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">
                    <i class="fas fa-exclamation-triangle text-yellow-600 mr-2"></i>
                    Pendentes
                </h3>
                <div class="flex items-baseline">
                    <p class="text-3xl font-bold text-yellow-600">
                        R$ <%= typeof stats !== 'undefined' && stats && stats.cobrancasPendentes ? stats.cobrancasPendentes.valorTotal.toFixed(2) : '0.00' %>
                    </p>
                    <p class="ml-2 text-gray-600">
                        (<%= typeof stats !== 'undefined' && stats && stats.cobrancasPendentes ? stats.cobrancasPendentes.quantidade : 0 %> cobranças)
                    </p>
                </div>
            </div>
        </div>

        <!-- Abas de Clientes -->
        <div class="bg-white rounded-lg shadow">
            <div class="border-b border-gray-200">
                <nav class="flex -mb-px">
                    <button onclick="mostrarAba('prestes_bloquear', this)" 
                            class="aba-btn px-6 py-3 text-sm font-medium text-red-600 border-b-2 border-red-600">
                        <i class="fas fa-exclamation-circle mr-2"></i>
                        Prestes a Bloquear (<%= clientesPrestesBloquear.length %>)
                    </button>
                    <button onclick="mostrarAba('pendente', this)" 
                            class="aba-btn px-6 py-3 text-sm font-medium text-gray-500 border-b-2 border-transparent hover:text-gray-700 hover:border-gray-300">
                        <i class="fas fa-clock mr-2"></i>
                        Pendentes (<%= typeof clientesPendentes !== 'undefined' && clientesPendentes ? clientesPendentes.length : 0 %>)
                    </button>
                    <button onclick="mostrarAba('bloqueado', this)" 
                            class="aba-btn px-6 py-3 text-sm font-medium text-gray-500 border-b-2 border-transparent hover:text-gray-700 hover:border-gray-300">
                        <i class="fas fa-ban mr-2"></i>
                        Bloqueados (<%= typeof clientesBloqueados !== 'undefined' && clientesBloqueados ? clientesBloqueados.length : 0 %>)
                    </button>
                    <button onclick="mostrarAba('em_dia', this)" 
                            class="aba-btn px-6 py-3 text-sm font-medium text-gray-500 border-b-2 border-transparent hover:text-gray-700 hover:border-gray-300">
                        <i class="fas fa-check-circle mr-2"></i>
                        Em Dia (<%= typeof clientesEmDia !== 'undefined' && clientesEmDia ? clientesEmDia.length : 0 %>)
                    </button>
                </nav>
            </div>

            <!-- Conteúdo das Abas -->
            <div class="p-6">
                <!-- Prestes a Bloquear -->
                <div id="aba-prestes_bloquear" class="aba-conteudo">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">
                        Clientes Prestes a Bloquear (<%= typeof stats !== 'undefined' && stats ? (stats.clientesPrestesBloquear || 0) : 0 %>)
                    </h3>
                    <% if (typeof clientesPrestesBloquear === 'undefined' || !clientesPrestesBloquear || clientesPrestesBloquear.length === 0) { %>
                        <p class="text-gray-500">Nenhum cliente prestes a bloquear.</p>
                    <% } else { %>
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Cliente</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Valor</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Vencimento</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Dias Atraso</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Dias para Bloquear</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Ações</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    <% clientesPrestesBloquear.forEach(cliente => { %>
                                        <tr>
                                            <td class="px-4 py-3">
                                                <div>
                                                    <p class="font-medium text-gray-900"><%= cliente.nome %></p>
                                                    <p class="text-sm text-gray-500"><%= cliente.email %></p>
                                                </div>
                                            </td>
                                            <td class="px-4 py-3 text-sm text-gray-900">
                                                R$ <%= parseFloat(cliente.valor).toFixed(2) %>
                                            </td>
                                            <td class="px-4 py-3 text-sm text-gray-900">
                                                <%= cliente.data_vencimento_formatada || cliente.data_vencimento || '-' %>
                                            </td>
                                            <td class="px-4 py-3">
                                                <span class="px-2 py-1 text-xs font-medium bg-yellow-100 text-yellow-800 rounded">
                                                    <%= cliente.dias_atraso %> dias
                                                </span>
                                            </td>
                                            <td class="px-4 py-3">
                                                <span class="px-2 py-1 text-xs font-medium bg-red-100 text-red-800 rounded">
                                                    <%= cliente.dias_para_bloquear %> dias
                                                </span>
                                            </td>
                                            <td class="px-4 py-3 text-sm">
                                                <a href="/cobranca/pagar/<%= cliente.cobranca_id %>" 
                                                   class="text-blue-600 hover:text-blue-800">
                                                    Ver Cobrança
                                                </a>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>

                <!-- Pendentes -->
                <div id="aba-pendente" class="aba-conteudo hidden">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">
                        Clientes com Pagamento Pendente
                    </h3>
                    <% if (typeof clientesPendentes === 'undefined' || !clientesPendentes || clientesPendentes.length === 0) { %>
                        <p class="text-gray-500">Nenhum cliente pendente.</p>
                    <% } else { %>
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Cliente</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Valor</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Vencimento</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Ações</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    <% clientesPendentes.forEach(cliente => { %>
                                        <tr>
                                            <td class="px-4 py-3">
                                                <div>
                                                    <p class="font-medium text-gray-900"><%= cliente.nome %></p>
                                                    <p class="text-sm text-gray-500"><%= cliente.email %></p>
                                                </div>
                                            </td>
                                            <td class="px-4 py-3 text-sm text-gray-900">
                                                R$ <%= parseFloat(cliente.valor).toFixed(2) %>
                                            </td>
                                            <td class="px-4 py-3 text-sm text-gray-900">
                                                <%= cliente.data_vencimento_formatada || cliente.data_vencimento || '-' %>
                                            </td>
                                            <td class="px-4 py-3">
                                                <span class="px-2 py-1 text-xs font-medium <%= cliente.status === 'vencida' ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %> rounded">
                                                    <%= cliente.status === 'vencida' ? 'Vencida' : 'Pendente' %>
                                                </span>
                                            </td>
                                            <td class="px-4 py-3 text-sm">
                                                <a href="/cobranca/pagar/<%= cliente.cobranca_id %>" 
                                                   class="text-blue-600 hover:text-blue-800">
                                                    Ver Cobrança
                                                </a>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>

                <!-- Bloqueados -->
                <div id="aba-bloqueado" class="aba-conteudo hidden">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">
                        Clientes Bloqueados
                    </h3>
                    <% if (typeof clientesBloqueados === 'undefined' || !clientesBloqueados || clientesBloqueados.length === 0) { %>
                        <p class="text-gray-500">Nenhum cliente bloqueado.</p>
                    <% } else { %>
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Cliente</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Valor</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Vencimento</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Dias Atraso</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Ações</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    <% clientesBloqueados.forEach(cliente => { %>
                                        <tr>
                                            <td class="px-4 py-3">
                                                <div>
                                                    <p class="font-medium text-gray-900"><%= cliente.nome %></p>
                                                    <p class="text-sm text-gray-500"><%= cliente.email %></p>
                                                </div>
                                            </td>
                                            <td class="px-4 py-3 text-sm text-gray-900">
                                                R$ <%= parseFloat(cliente.valor).toFixed(2) %>
                                            </td>
                                            <td class="px-4 py-3 text-sm text-gray-900">
                                                <%= cliente.data_vencimento_formatada || cliente.data_vencimento || '-' %>
                                            </td>
                                            <td class="px-4 py-3">
                                                <span class="px-2 py-1 text-xs font-medium bg-red-100 text-red-800 rounded">
                                                    <%= cliente.dias_atraso %> dias
                                                </span>
                                            </td>
                                            <td class="px-4 py-3 text-sm">
                                                <a href="/cobranca/pagar/<%= cliente.cobranca_id %>" 
                                                   class="text-blue-600 hover:text-blue-800">
                                                    Ver Cobrança
                                                </a>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>

                <!-- Em Dia -->
                <div id="aba-em_dia" class="aba-conteudo hidden">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">
                        Clientes em Dia
                    </h3>
                    <% if (typeof clientesEmDia === 'undefined' || !clientesEmDia || clientesEmDia.length === 0) { %>
                        <p class="text-gray-500">Nenhum cliente em dia.</p>
                    <% } else { %>
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Cliente</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Último Pagamento</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Mês Pago</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    <% clientesEmDia.forEach(cliente => { %>
                                        <tr>
                                            <td class="px-4 py-3">
                                                <div>
                                                    <p class="font-medium text-gray-900"><%= cliente.nome %></p>
                                                    <p class="text-sm text-gray-500"><%= cliente.email %></p>
                                                </div>
                                            </td>
                                            <td class="px-4 py-3 text-sm text-gray-900">
                                                <% 
                                                    let ultimoPag = cliente.ultimo_pagamento || cliente.ultimo_pagamento_raw;
                                                    if (ultimoPag) {
                                                        try {
                                                            const d = new Date(ultimoPag);
                                                            if (!isNaN(d.getTime())) {
                                                                const dia = String(d.getDate()).padStart(2, '0');
                                                                const mes = String(d.getMonth() + 1).padStart(2, '0');
                                                                const ano = d.getFullYear();
                                                                out.write(dia + '/' + mes + '/' + ano);
                                                            } else {
                                                                out.write(ultimoPag.toString());
                                                            }
                                                        } catch(e) {
                                                            out.write(ultimoPag.toString());
                                                        }
                                                    } else {
                                                        out.write('-');
                                                    }
                                                %>
                                            </td>
                                            <td class="px-4 py-3 text-sm text-gray-900">
                                                <%= cliente.ultimo_mes_pago || '-' %>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </main>

    <script>
        function mostrarAba(aba) {
            // Oculta todas as abas
            document.querySelectorAll('.aba-conteudo').forEach(el => {
                el.classList.add('hidden');
            });
            
            // Remove estilo ativo de todos os botões
            document.querySelectorAll('.aba-btn').forEach(btn => {
                btn.classList.remove('text-primary-red', 'border-primary-red');
                btn.classList.add('text-gray-500', 'border-transparent');
            });

            // Mostra a aba selecionada
            document.getElementById('aba-' + aba).classList.remove('hidden');
            
            // Ativa o botão
            event.target.classList.remove('text-gray-500', 'border-transparent');
            event.target.classList.add('text-primary-red', 'border-primary-red');
        }

        // Atualiza dados a cada 30 segundos
        setInterval(() => {
            fetch('/admin/api/monitoramento/estatisticas')
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        // Atualiza estatísticas (pode implementar se quiser)
                        console.log('Estatísticas atualizadas');
                    }
                })
                .catch(err => console.error('Erro ao atualizar:', err));
        }, 30000);
    </script>
</body>
</html>

