<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: { red: '#DC2626', yellow: '#FBBF24' }
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="bg-gray-50">
    <% if (typeof user !=='undefined' && user) { %>
        <%- include('../partials/navbar') %>
            <% } %>

                <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
                    <div class="mb-6">
                        <h1 class="text-3xl font-bold text-gray-900">Painel Administrativo</h1>
                        <p class="mt-2 text-gray-600">Gerenciamento de usuários e sistema</p>
                    </div>

                    <!-- Cards de Estatísticas -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                        <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-blue-500">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-gray-600 text-sm">Total de Usuários</p>
                                    <p class="text-3xl font-bold text-gray-900 mt-2">
                                        <%= stats.usuarios.total || 0 %>
                                    </p>
                                    <div class="mt-2 text-xs text-gray-500">
                                        <span class="text-green-600">
                                            <%= stats.usuarios.ativos || 0 %> ativos
                                        </span> |
                                        <span class="text-red-600">
                                            <%= stats.usuarios.bloqueados || 0 %> bloqueados
                                        </span>
                                    </div>
                                </div>
                                <i class="fas fa-users text-blue-500 text-4xl"></i>
                            </div>
                        </div>

                        <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-green-500">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-gray-600 text-sm">Total de Cálculos</p>
                                    <p class="text-3xl font-bold text-gray-900 mt-2">
                                        <%= stats.calculos || 0 %>
                                    </p>
                                    <p class="mt-2 text-xs text-gray-500">Realizados no sistema</p>
                                </div>
                                <i class="fas fa-calculator text-green-500 text-4xl"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Usuários Online -->
                    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
                        <h2 class="text-xl font-bold text-gray-900 mb-4">
                            <i class="fas fa-circle text-green-500 mr-2"></i>Usuários Online Agora
                        </h2>
                        <% if (typeof onlineUsers !== 'undefined' && onlineUsers && onlineUsers.length > 0) { %>
                            <div class="overflow-x-auto">
                                <table class="min-w-full divide-y divide-gray-200">
                                    <thead class="bg-gray-50">
                                        <tr>
                                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Nome</th>
                                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
                                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tipo</th>
                                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Última Atividade</th>
                                        </tr>
                                    </thead>
                                    <tbody class="bg-white divide-y divide-gray-200">
                                        <% onlineUsers.forEach(user => { %>
                                            <tr>
                                                <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">
                                                    <%= user.nome %>
                                                </td>
                                                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                                                    <%= user.email %>
                                                </td>
                                                <td class="px-4 py-3 whitespace-nowrap">
                                                    <% if (user.is_admin) { %>
                                                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800">Admin</span>
                                                    <% } else { %>
                                                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">Usuário</span>
                                                    <% } %>
                                                </td>
                                                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                                                    <% if (user.ultima_atividade) { %>
                                                        <%= new Date(user.ultima_atividade).toLocaleString('pt-BR') %>
                                                    <% } else { %>
                                                        Agora
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <p class="text-gray-500 text-center py-4">Nenhum usuário online no momento</p>
                        <% } %>
                    </div>

                    <!-- Usuários Offline -->
                    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
                        <h2 class="text-xl font-bold text-gray-900 mb-4">
                            <i class="fas fa-circle text-gray-400 mr-2"></i>Usuários Offline
                        </h2>
                        <% if (typeof offlineUsers !== 'undefined' && offlineUsers && offlineUsers.length > 0) { %>
                            <div class="overflow-x-auto">
                                <table class="min-w-full divide-y divide-gray-200">
                                    <thead class="bg-gray-50">
                                        <tr>
                                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Nome</th>
                                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
                                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tipo</th>
                                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Último Login</th>
                                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody class="bg-white divide-y divide-gray-200">
                                        <% offlineUsers.forEach(user => { %>
                                            <tr>
                                                <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">
                                                    <%= user.nome %>
                                                </td>
                                                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                                                    <%= user.email %>
                                                </td>
                                                <td class="px-4 py-3 whitespace-nowrap">
                                                    <% if (user.is_admin) { %>
                                                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800">Admin</span>
                                                    <% } else { %>
                                                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">Usuário</span>
                                                    <% } %>
                                                </td>
                                                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                                                    <% if (user.last_login) { %>
                                                        <%= new Date(user.last_login).toLocaleString('pt-BR') %>
                                                    <% } else { %>
                                                        <span class="text-gray-400">Nunca</span>
                                                    <% } %>
                                                </td>
                                                <td class="px-4 py-3 whitespace-nowrap">
                                                    <% if (user.status === 'bloqueada') { %>
                                                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">Bloqueada</span>
                                                    <% } else if (user.status === 'inativa') { %>
                                                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">Inativa</span>
                                                    <% } else { %>
                                                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Ativa</span>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <p class="text-gray-500 text-center py-4">Nenhum usuário offline encontrado</p>
                        <% } %>
                    </div>

                    <!-- Menu de Ações Rápidas -->
                    <div class="grid grid-cols-1 md:grid-cols-1 gap-6 mb-8">
                        <a href="/admin/usuarios"
                            class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow border-l-4 border-blue-500">
                            <div class="flex items-center">
                                <i class="fas fa-users-cog text-blue-500 text-3xl mr-4"></i>
                                <div>
                                    <h3 class="text-lg font-bold text-gray-900">Gerenciar Usuários</h3>
                                    <p class="text-sm text-gray-600 mt-1">Visualizar, bloquear, ativar e gerenciar todos
                                        os usuários do sistema</p>
                                </div>
                            </div>
                        </a>
                    </div>

                </main>

                <script src="/js/loading.js"></script>
</body>

</html>