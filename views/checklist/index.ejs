<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            red: '#DC2626',
                            yellow: '#FBBF24'
                        }
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .fade-in { animation: fadeIn 0.3s ease-out; }
    </style>
</head>
<body class="bg-gray-50">
    <% if (typeof user !== 'undefined' && user) { %>
        <%- include('../partials/navbar') %>
    <% } %>

    <main class="max-w-7xl mx-auto px-4 py-8">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-4">
                <div>
                    <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">
                        <i class="fas fa-tasks text-primary-red mr-2"></i>
                        Checklists de Processos
                    </h1>
                    <p class="text-gray-600">
                        Organize e acompanhe todos os processos trabalhistas da sua empresa
                    </p>
                </div>
                <button 
                    type="button"
                    data-action="criar"
                    class="bg-gradient-to-r from-primary-red to-primary-yellow text-white px-6 py-3 rounded-lg font-bold hover:opacity-90 transition transform hover:scale-105 shadow-lg flex items-center gap-2">
                    <i class="fas fa-plus"></i>
                    Novo Checklist
                </button>
            </div>

            <!-- Estatísticas -->
            <% if (checklists && checklists.length > 0) { %>
                <% 
                    const totalChecklists = checklists.length;
                    const totalItens = checklists.reduce((sum, c) => sum + (parseInt(c.total_itens) || 0), 0);
                    const itensConcluidos = checklists.reduce((sum, c) => sum + (parseInt(c.itens_concluidos) || 0), 0);
                    const percentualGeral = totalItens > 0 ? Math.round((itensConcluidos / totalItens) * 100) : 0;
                %>
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
                    <div class="bg-white rounded-lg shadow-md p-4 border-l-4 border-primary-red">
                        <p class="text-sm text-gray-600 mb-1">Total de Checklists</p>
                        <p class="text-2xl font-bold text-gray-900"><%= totalChecklists %></p>
                    </div>
                    <div class="bg-white rounded-lg shadow-md p-4 border-l-4 border-primary-yellow">
                        <p class="text-sm text-gray-600 mb-1">Total de Itens</p>
                        <p class="text-2xl font-bold text-gray-900"><%= totalItens %></p>
                    </div>
                    <div class="bg-white rounded-lg shadow-md p-4 border-l-4 border-green-500">
                        <p class="text-sm text-gray-600 mb-1">Itens Concluídos</p>
                        <p class="text-2xl font-bold text-gray-900"><%= itensConcluidos %></p>
                    </div>
                    <div class="bg-gradient-to-r from-primary-red to-primary-yellow rounded-lg shadow-md p-4 text-white">
                        <p class="text-sm opacity-90 mb-1">Progresso Geral</p>
                        <p class="text-2xl font-bold"><%= percentualGeral %>%</p>
                    </div>
                </div>
            <% } %>
        </div>

        <!-- Modelos Prontos -->
        <section class="mb-12">
            <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                <i class="fas fa-book text-primary-red mr-2"></i>
                Modelos Prontos
            </h2>
            <p class="text-sm text-gray-600 mb-4">
                Use nossos modelos pré-configurados para processos comuns
            </p>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                <a href="/checklist/admissao" 
                   class="bg-white rounded-lg shadow-md p-6 border-l-4 border-blue-500 hover:shadow-lg transition-all hover:scale-105 group">
                    <div class="flex items-center gap-4 mb-3">
                        <div class="bg-blue-100 text-blue-600 rounded-lg w-12 h-12 flex items-center justify-center">
                            <i class="fas fa-user-plus text-xl"></i>
                        </div>
                        <div>
                            <h3 class="font-bold text-lg text-gray-900">Admissão</h3>
                            <p class="text-xs text-gray-500">Processo completo de admissão</p>
                        </div>
                    </div>
                    <p class="text-sm text-gray-600">
                        Checklist completo com todos os passos necessários para admissão de funcionários
                    </p>
                </a>

                <a href="/checklist/rescisao" 
                   class="bg-white rounded-lg shadow-md p-6 border-l-4 border-amber-500 hover:shadow-lg transition-all hover:scale-105 group">
                    <div class="flex items-center gap-4 mb-3">
                        <div class="bg-amber-100 text-amber-600 rounded-lg w-12 h-12 flex items-center justify-center">
                            <i class="fas fa-user-minus text-xl"></i>
                        </div>
                        <div>
                            <h3 class="font-bold text-lg text-gray-900">Rescisão</h3>
                            <p class="text-xs text-gray-500">Processo completo de rescisão</p>
                        </div>
                    </div>
                    <p class="text-sm text-gray-600">
                        Todos os passos para realizar uma rescisão trabalhista corretamente
                    </p>
                </a>

                <a href="/checklist/afastamento_inss" 
                   class="bg-white rounded-lg shadow-md p-6 border-l-4 border-red-500 hover:shadow-lg transition-all hover:scale-105 group">
                    <div class="flex items-center gap-4 mb-3">
                        <div class="bg-red-100 text-red-600 rounded-lg w-12 h-12 flex items-center justify-center">
                            <i class="fas fa-user-injured text-xl"></i>
                        </div>
                        <div>
                            <h3 class="font-bold text-lg text-gray-900">Afastamento INSS</h3>
                            <p class="text-xs text-gray-500">Gestão de afastamentos</p>
                        </div>
                    </div>
                    <p class="text-sm text-gray-600">
                        Controle completo de afastamentos por INSS e retorno ao trabalho
                    </p>
                </a>
            </div>
        </section>

        <!-- Checklists Personalizados -->
        <section>
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-xl font-bold text-gray-900 flex items-center">
                    <i class="fas fa-list-check text-primary-yellow mr-2"></i>
                    Meus Checklists Personalizados
                </h2>
                <% if (checklists && checklists.length > 0) { %>
                    <span class="text-sm text-gray-500">
                        <%= checklists.length %> checklist<%= checklists.length !== 1 ? 's' : '' %>
                    </span>
                <% } %>
            </div>

            <% if (checklists && checklists.length > 0) { %>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% checklists.forEach(checklist => { %>
                        <% 
                            const percentual = checklist.total_itens > 0 
                                ? Math.round((checklist.itens_concluidos / checklist.total_itens) * 100) 
                                : 0;
                            const dataCriacao = checklist.created_at 
                                ? new Date(checklist.created_at).toLocaleDateString('pt-BR') 
                                : 'Data não disponível';
                        %>
                        <div class="bg-white rounded-lg shadow-md border border-gray-200 hover:shadow-xl transition-all fade-in">
                            <div class="p-6">
                                <!-- Header do Card -->
                                <div class="flex justify-between items-start mb-4">
                                    <div class="flex-1">
                                        <div class="flex items-center gap-2 mb-2">
                                            <span class="px-2 py-1 bg-primary-red text-white text-xs font-bold rounded uppercase">
                                                <%= checklist.tipo || 'Custom' %>
                                            </span>
                                            <% if (percentual === 100) { %>
                                                <span class="px-2 py-1 bg-green-500 text-white text-xs font-bold rounded">
                                                    <i class="fas fa-check-circle mr-1"></i>Concluído
                                                </span>
                                            <% } %>
                                        </div>
                                        <h3 class="text-lg font-bold text-gray-900 mb-1"><%= checklist.titulo %></h3>
                                        <p class="text-xs text-gray-500">
                                            <i class="fas fa-calendar-alt mr-1"></i>
                                            Criado em <%= dataCriacao %>
                                        </p>
                                    </div>
                                    <div class="flex gap-2">
                                        <button 
                                            type="button"
                                            data-action="editar"
                                            data-id="<%= checklist.id %>"
                                            data-titulo="<%= checklist.titulo %>"
                                            data-tipo="<%= checklist.tipo || 'custom' %>"
                                            class="text-gray-400 hover:text-primary-yellow transition-colors p-2"
                                            title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button 
                                            type="button"
                                            data-action="deletar"
                                            data-id="<%= checklist.id %>"
                                            data-titulo="<%= checklist.titulo %>"
                                            class="text-gray-400 hover:text-primary-red transition-colors p-2"
                                            title="Deletar">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </div>

                                <!-- Progresso -->
                                <div class="mb-4">
                                    <div class="flex justify-between text-sm mb-2">
                                        <span class="text-gray-600">
                                            <i class="fas fa-tasks mr-1"></i>
                                            <%= checklist.itens_concluidos || 0 %> de <%= checklist.total_itens || 0 %> itens
                                        </span>
                                        <span class="font-bold text-gray-900"><%= percentual %>%</span>
                                    </div>
                                    <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden">
                                        <div 
                                            class="bg-gradient-to-r from-primary-red to-primary-yellow h-3 rounded-full transition-all duration-500"
                                            style="width: <%= percentual %>%">
                                        </div>
                                    </div>
                                </div>

                                <!-- Informações Adicionais -->
                                <div class="grid grid-cols-2 gap-2 mb-4 text-xs text-gray-600">
                                    <div>
                                        <i class="fas fa-list mr-1"></i>
                                        <%= checklist.total_itens || 0 %> itens
                                    </div>
                                    <div>
                                        <i class="fas fa-check-circle mr-1"></i>
                                        <%= checklist.itens_concluidos || 0 %> concluídos
                                    </div>
                                </div>

                                <!-- Botão Abrir -->
                                <a 
                                    href="/checklist/custom/<%= checklist.id %>" 
                                    class="block w-full text-center py-2 bg-gradient-to-r from-primary-red to-primary-yellow text-white font-bold rounded-lg hover:opacity-90 transition transform hover:scale-105">
                                    <i class="fas fa-external-link-alt mr-2"></i>
                                    Abrir Checklist
                                </a>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="bg-white rounded-lg shadow-md p-12 text-center border-2 border-dashed border-gray-300">
                    <i class="fas fa-clipboard-list text-6xl text-gray-300 mb-4"></i>
                    <h3 class="text-xl font-bold text-gray-700 mb-2">Nenhum checklist criado ainda</h3>
                    <p class="text-gray-500 mb-6">
                        Crie seu primeiro checklist personalizado ou use um dos modelos prontos acima
                    </p>
                    <button 
                        type="button"
                        data-action="criar"
                        class="bg-gradient-to-r from-primary-red to-primary-yellow text-white px-6 py-3 rounded-lg font-bold hover:opacity-90 transition">
                        <i class="fas fa-plus mr-2"></i>
                        Criar Primeiro Checklist
                    </button>
                </div>
            <% } %>
        </section>
    </main>

    <!-- Modal Criar Checklist -->
    <div id="modalCriar" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
        <div class="bg-white rounded-xl shadow-2xl p-8 max-w-md w-full fade-in">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-2xl font-bold text-gray-900">
                    <i class="fas fa-plus-circle text-primary-red mr-2"></i>
                    Criar Novo Checklist
                </h3>
                <button 
                    type="button"
                    data-action="fechar-criar"
                    class="text-gray-400 hover:text-gray-600">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
            
            <form id="formCriar" class="space-y-4">
                <% if (typeof csrfToken !== 'undefined' && csrfToken) { %>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <% } %>
                
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="fas fa-heading text-primary-red mr-2"></i>
                        Título do Checklist *
                    </label>
                    <input 
                        type="text" 
                        id="novoTituloChecklist" 
                        name="titulo"
                        required
                        placeholder="Ex: Processo de Férias 2024"
                        class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-primary-red focus:ring-2 focus:ring-primary-red transition outline-none">
                    <p class="text-xs text-gray-500 mt-1">Dê um nome descritivo para seu checklist</p>
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="fas fa-tag text-primary-yellow mr-2"></i>
                        Tipo/Categoria
                    </label>
                    <input 
                        type="text" 
                        id="novoTipoChecklist" 
                        name="tipo"
                        placeholder="Ex: Férias, Folha de Pagamento, etc."
                        class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-primary-yellow focus:ring-2 focus:ring-primary-yellow transition outline-none">
                    <p class="text-xs text-gray-500 mt-1">Opcional: categorize seu checklist</p>
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="fas fa-list text-primary-red mr-2"></i>
                        Itens Iniciais (Opcional)
                    </label>
                    <textarea 
                        id="novosItensChecklist" 
                        name="itens"
                        rows="4" 
                        placeholder="Digite um item por linha&#10;Exemplo:&#10;Verificar documentos&#10;Calcular valores&#10;Enviar para aprovação"
                        class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-primary-red focus:ring-2 focus:ring-primary-red transition outline-none resize-none"></textarea>
                    <p class="text-xs text-gray-500 mt-1">Você pode adicionar itens depois também</p>
                </div>

                <div class="flex gap-3 pt-4">
                    <button 
                        type="button"
                        data-action="fechar-criar"
                        class="flex-1 py-3 text-gray-600 font-bold hover:bg-gray-100 rounded-lg transition">
                        Cancelar
                    </button>
                    <button 
                        type="submit"
                        class="flex-1 py-3 bg-gradient-to-r from-primary-red to-primary-yellow text-white font-bold rounded-lg hover:opacity-90 transition transform hover:scale-105 shadow-lg">
                        <i class="fas fa-check mr-2"></i>
                        Criar Checklist
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Modal Editar Checklist -->
    <div id="modalEditar" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
        <div class="bg-white rounded-xl shadow-2xl p-8 max-w-md w-full fade-in">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-2xl font-bold text-gray-900">
                    <i class="fas fa-edit text-primary-yellow mr-2"></i>
                    Editar Checklist
                </h3>
                <button 
                    type="button"
                    data-action="fechar-editar"
                    class="text-gray-400 hover:text-gray-600">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
            
            <form id="formEditar" class="space-y-4">
                <% if (typeof csrfToken !== 'undefined' && csrfToken) { %>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <% } %>
                <input type="hidden" id="checklistIdEditar" name="checklistId">
                
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="fas fa-heading text-primary-red mr-2"></i>
                        Título do Checklist *
                    </label>
                    <input 
                        type="text" 
                        id="tituloChecklistEditar" 
                        name="titulo"
                        required
                        class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-primary-red focus:ring-2 focus:ring-primary-red transition outline-none">
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="fas fa-tag text-primary-yellow mr-2"></i>
                        Tipo/Categoria
                    </label>
                    <input 
                        type="text" 
                        id="tipoChecklistEditar" 
                        name="tipo"
                        class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-primary-yellow focus:ring-2 focus:ring-primary-yellow transition outline-none">
                </div>

                <div class="flex gap-3 pt-4">
                    <button 
                        type="button"
                        data-action="fechar-editar"
                        class="flex-1 py-3 text-gray-600 font-bold hover:bg-gray-100 rounded-lg transition">
                        Cancelar
                    </button>
                    <button 
                        type="submit"
                        class="flex-1 py-3 bg-gradient-to-r from-primary-red to-primary-yellow text-white font-bold rounded-lg hover:opacity-90 transition transform hover:scale-105 shadow-lg">
                        <i class="fas fa-save mr-2"></i>
                        Salvar Alterações
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Disponibiliza token CSRF globalmente
        window.csrfToken = '<%= typeof csrfToken !== "undefined" && csrfToken ? csrfToken : "" %>';
        
        function getCSRFHeaders() {
            const headers = { 'Content-Type': 'application/json' };
            if (window.csrfToken) {
                headers['X-CSRF-Token'] = window.csrfToken;
            }
            return headers;
        }

        // Event Listeners
        document.addEventListener('DOMContentLoaded', function() {
            // Botão Criar
            document.querySelectorAll('[data-action="criar"]').forEach(btn => {
                btn.addEventListener('click', abrirModalCriar);
            });

            // Botão Fechar Criar
            document.querySelectorAll('[data-action="fechar-criar"]').forEach(btn => {
                btn.addEventListener('click', fecharModalCriar);
            });

            // Botão Editar
            document.querySelectorAll('[data-action="editar"]').forEach(btn => {
                btn.addEventListener('click', function() {
                    const id = this.getAttribute('data-id');
                    const titulo = this.getAttribute('data-titulo');
                    const tipo = this.getAttribute('data-tipo');
                    editarChecklist(id, titulo, tipo);
                });
            });

            // Botão Fechar Editar
            document.querySelectorAll('[data-action="fechar-editar"]').forEach(btn => {
                btn.addEventListener('click', fecharModalEditar);
            });

            // Botão Deletar
            document.querySelectorAll('[data-action="deletar"]').forEach(btn => {
                btn.addEventListener('click', function() {
                    const id = this.getAttribute('data-id');
                    const titulo = this.getAttribute('data-titulo');
                    deletarChecklist(id, titulo);
                });
            });

            // Fechar modal ao clicar fora
            document.getElementById('modalCriar').addEventListener('click', function(e) {
                if (e.target === this) fecharModalCriar();
            });

            document.getElementById('modalEditar').addEventListener('click', function(e) {
                if (e.target === this) fecharModalEditar();
            });
        });

        function abrirModalCriar() {
            document.getElementById('modalCriar').classList.remove('hidden');
            document.getElementById('novoTituloChecklist').focus();
        }

        function fecharModalCriar() {
            document.getElementById('modalCriar').classList.add('hidden');
            document.getElementById('formCriar').reset();
        }

        function editarChecklist(id, titulo, tipo) {
            document.getElementById('checklistIdEditar').value = id;
            document.getElementById('tituloChecklistEditar').value = titulo;
            document.getElementById('tipoChecklistEditar').value = tipo || 'custom';
            document.getElementById('modalEditar').classList.remove('hidden');
            document.getElementById('tituloChecklistEditar').focus();
        }

        function fecharModalEditar() {
            document.getElementById('modalEditar').classList.add('hidden');
            document.getElementById('formEditar').reset();
        }

        // Criar Checklist
        document.getElementById('formCriar').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const titulo = document.getElementById('novoTituloChecklist').value.trim();
            const tipo = document.getElementById('novoTipoChecklist').value.trim();
            const itensTexto = document.getElementById('novosItensChecklist').value.trim();
            
            if (!titulo) {
                alert('O título do checklist é obrigatório!');
                return;
            }

            const itens = itensTexto ? itensTexto.split('\n').filter(item => item.trim()).map(item => item.trim()) : [];

            // Loading
            const btn = this.querySelector('button[type="submit"]');
            const originalText = btn.innerHTML;
            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Criando...';

            fetch('/checklist/criar-custom', {
                method: 'POST',
                headers: getCSRFHeaders(),
                body: JSON.stringify({ 
                    titulo, 
                    tipo: tipo || 'custom', 
                    itens,
                    _csrf: window.csrfToken 
                })
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    window.location.href = '/checklist/custom/' + data.data.id;
                } else {
                    alert('Erro ao criar checklist: ' + (data.error || 'Erro desconhecido'));
                    btn.disabled = false;
                    btn.innerHTML = originalText;
                }
            })
            .catch(error => {
                console.error('Erro:', error);
                alert('Erro ao criar checklist. Tente novamente.');
                btn.disabled = false;
                btn.innerHTML = originalText;
            });
        });

        // Editar Checklist
        document.getElementById('formEditar').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const id = document.getElementById('checklistIdEditar').value;
            const titulo = document.getElementById('tituloChecklistEditar').value.trim();
            const tipo = document.getElementById('tipoChecklistEditar').value.trim();

            if (!titulo) {
                alert('O título do checklist é obrigatório!');
                return;
            }

            // Loading
            const btn = this.querySelector('button[type="submit"]');
            const originalText = btn.innerHTML;
            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Salvando...';

            fetch('/checklist/atualizar-custom', {
                method: 'POST',
                headers: getCSRFHeaders(),
                body: JSON.stringify({ 
                    checklistId: id, 
                    titulo, 
                    tipo: tipo || 'custom',
                    _csrf: window.csrfToken 
                })
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Erro ao atualizar checklist: ' + (data.error || 'Erro desconhecido'));
                    btn.disabled = false;
                    btn.innerHTML = originalText;
                }
            })
            .catch(error => {
                console.error('Erro:', error);
                alert('Erro ao atualizar checklist. Tente novamente.');
                btn.disabled = false;
                btn.innerHTML = originalText;
            });
        });

        // Deletar Checklist
        function deletarChecklist(id, titulo) {
            if (!confirm('Tem certeza que deseja deletar o checklist "' + titulo + '"?\n\nEsta ação não pode ser desfeita!')) {
                return;
            }

            fetch('/checklist/deletar', {
                method: 'POST',
                headers: getCSRFHeaders(),
                body: JSON.stringify({ 
                    checklistId: id,
                    _csrf: window.csrfToken 
                })
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Erro ao deletar checklist: ' + (data.error || 'Erro desconhecido'));
                }
            })
