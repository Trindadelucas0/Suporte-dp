<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: { red: '#DC2626', yellow: '#FBBF24' }
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/loading.css">
</head>
<body class="bg-gray-50">
    <% if (typeof user !== 'undefined' && user) { %>
        <%- include('../partials/navbar') %>
    <% } %>

    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        <div class="mb-6 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Checklists de Processos</h1>
                <p class="mt-2 text-gray-600">Gerencie seus checklists de processos trabalhistas</p>
            </div>
            <button onclick="abrirModalCriar()" 
                    class="w-full sm:w-auto bg-gradient-to-r from-primary-red to-primary-yellow text-white px-6 py-3 rounded-lg hover:opacity-90 font-semibold shadow-lg hover:shadow-xl transition-all">
                <i class="fas fa-plus mr-2"></i>Criar Novo Checklist
            </button>
        </div>

        <!-- Checklists Padrão -->
        <div class="mb-8">
            <h2 class="text-xl font-bold text-gray-900 mb-4">Checklists Padrão</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <a href="/checklist/admissao" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition border-l-4 border-primary-red transform hover:scale-105">
                    <div class="flex items-center mb-4">
                        <i class="fas fa-user-plus text-primary-red text-4xl mr-4"></i>
                        <div>
                            <h2 class="text-xl font-bold text-gray-900">Checklist de Admissão</h2>
                            <p class="text-gray-600 text-sm">Processo completo de admissão</p>
                        </div>
                    </div>
                    <ul class="text-sm text-gray-600 space-y-1">
                        <li>✓ Coleta de documentos</li>
                        <li>✓ Exame admissional</li>
                        <li>✓ Registro CTPS Digital</li>
                        <li>✓ Cadastro eSocial</li>
                    </ul>
                </a>

                <a href="/checklist/rescisao" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition border-l-4 border-primary-yellow transform hover:scale-105">
                    <div class="flex items-center mb-4">
                        <i class="fas fa-user-minus text-primary-yellow text-4xl mr-4"></i>
                        <div>
                            <h2 class="text-xl font-bold text-gray-900">Checklist de Rescisão</h2>
                            <p class="text-gray-600 text-sm">Processo completo de rescisão</p>
                        </div>
                    </div>
                    <ul class="text-sm text-gray-600 space-y-1">
                        <li>✓ Aviso prévio</li>
                        <li>✓ Exame demissional</li>
                        <li>✓ Cálculo de rescisão</li>
                        <li>✓ Chave FGTS</li>
                    </ul>
                </a>

                <a href="/checklist/afastamento_inss" class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition border-l-4 border-primary-red transform hover:scale-105">
                    <div class="flex items-center mb-4">
                        <i class="fas fa-user-injured text-primary-red text-4xl mr-4"></i>
                        <div>
                            <h2 class="text-xl font-bold text-gray-900">Afastamento INSS</h2>
                            <p class="text-gray-600 text-sm">Processo de afastamento</p>
                        </div>
                    </div>
                    <ul class="text-sm text-gray-600 space-y-1">
                        <li>✓ Atestado médico</li>
                        <li>✓ Registro eSocial</li>
                        <li>✓ Cálculo de avos</li>
                        <li>✓ Retorno ao trabalho</li>
                    </ul>
                </a>
            </div>
        </div>

        <!-- Meus Checklists -->
        <div class="mb-8">
            <h2 class="text-xl font-bold text-gray-900 mb-4">Meus Checklists</h2>
            <% if (checklists && checklists.length > 0) { %>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% checklists.forEach(checklist => { %>
                        <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-primary-yellow hover:shadow-lg transition">
                            <div class="flex justify-between items-start mb-4">
                                <div class="flex-1">
                                    <h3 class="text-lg font-bold text-gray-900 mb-1"><%= checklist.titulo %></h3>
                                    <p class="text-sm text-gray-500 mb-2">
                                        <i class="fas fa-tag mr-1"></i><%= checklist.tipo || 'Personalizado' %>
                                    </p>
                                    <div class="flex items-center text-sm text-gray-600 mb-2">
                                        <span>
                                            <i class="fas fa-check-circle mr-1 text-green-600"></i>
                                            <%= checklist.itens_concluidos || 0 %> / <%= checklist.total_itens || 0 %> itens
                                        </span>
                                    </div>
                                    <div class="w-full bg-gray-200 rounded-full h-2">
                                        <div class="bg-gradient-to-r from-primary-yellow to-primary-red h-2 rounded-full transition-all" 
                                             style="width: <%= checklist.total_itens > 0 ? ((checklist.itens_concluidos / checklist.total_itens * 100) || 0) : 0 %>%"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="flex flex-wrap gap-2 mt-4">
                                <a href="/checklist/custom/<%= checklist.id %>" 
                                   class="flex-1 bg-primary-yellow text-white px-4 py-2 rounded-lg hover:bg-yellow-600 text-center text-sm font-semibold transition">
                                    <i class="fas fa-eye mr-1"></i>Abrir
                                </a>
                                <button onclick="editarChecklist('<%= checklist.id %>', '<%= checklist.titulo.replace(/'/g, "\\'") %>', '<%= (checklist.tipo || "custom").replace(/'/g, "\\'") %>')" 
                                        class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 text-sm transition">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button onclick="deletarChecklist('<%= checklist.id %>', '<%= checklist.titulo.replace(/'/g, "\\'") %>')" 
                                        class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 text-sm transition">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="bg-white rounded-lg shadow-md p-12 text-center">
                    <i class="fas fa-clipboard-list text-gray-300 text-6xl mb-4"></i>
                    <p class="text-gray-600 mb-4">Você ainda não criou nenhum checklist personalizado</p>
                    <button onclick="abrirModalCriar()" 
                            class="bg-gradient-to-r from-primary-red to-primary-yellow text-white px-6 py-3 rounded-lg hover:opacity-90 font-semibold shadow-lg">
                        <i class="fas fa-plus mr-2"></i>Criar Primeiro Checklist
                    </button>
                </div>
            <% } %>
        </div>
    </main>

    <!-- Modal Criar Checklist -->
    <div id="modalCriar" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
        <div class="bg-white rounded-xl shadow-2xl p-6 max-w-md w-full transform transition-all">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-2xl font-bold text-gray-900">Criar Novo Checklist</h3>
                <button onclick="fecharModalCriar()" class="text-gray-400 hover:text-gray-600">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
            <form id="formCriar" onsubmit="criarChecklist(event)">
                <div class="mb-4">
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="fas fa-heading text-primary-red mr-2"></i>Nome do Checklist <span class="text-red-500">*</span>
                    </label>
                    <input type="text" id="novoTituloChecklist" required
                           class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-red focus:border-primary-red transition" 
                           placeholder="Ex: Checklist de Férias">
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="fas fa-tag text-primary-red mr-2"></i>Tipo (opcional)
                    </label>
                    <input type="text" id="novoTipoChecklist"
                           class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-red focus:border-primary-red transition" 
                           placeholder="Ex: Férias, Promoção, etc.">
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="fas fa-list text-primary-red mr-2"></i>Itens Iniciais (um por linha)
                    </label>
                    <textarea id="novosItensChecklist" rows="5"
                              class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-red focus:border-primary-red transition" 
                              placeholder="Item 1&#10;Item 2&#10;Item 3"></textarea>
                    <p class="text-xs text-gray-500 mt-1">
                        <i class="fas fa-info-circle mr-1"></i>Digite um item por linha (opcional)
                    </p>
                </div>
                <div class="flex justify-end space-x-2">
                    <button type="button" onclick="fecharModalCriar()" 
                            class="px-6 py-2 bg-gray-200 rounded-lg hover:bg-gray-300 font-semibold transition">Cancelar</button>
                    <button type="submit" 
                            class="px-6 py-2 bg-gradient-to-r from-primary-red to-primary-yellow text-white rounded-lg hover:opacity-90 font-semibold shadow-lg transition">
                        <i class="fas fa-check mr-2"></i>Criar Checklist
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Modal Editar Checklist -->
    <div id="modalEditar" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
        <div class="bg-white rounded-xl shadow-2xl p-6 max-w-md w-full transform transition-all">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-2xl font-bold text-gray-900">Editar Checklist</h3>
                <button onclick="fecharModalEditar()" class="text-gray-400 hover:text-gray-600">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
            <form id="formEditar" onsubmit="salvarEdicaoChecklist(event)">
                <input type="hidden" id="checklistIdEditar">
                <div class="mb-4">
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="fas fa-heading text-primary-red mr-2"></i>Nome do Checklist <span class="text-red-500">*</span>
                    </label>
                    <input type="text" id="tituloChecklistEditar" required
                           class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-red focus:border-primary-red transition">
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="fas fa-tag text-primary-red mr-2"></i>Tipo (opcional)
                    </label>
                    <input type="text" id="tipoChecklistEditar"
                           class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-red focus:border-primary-red transition">
                </div>
                <div class="flex justify-end space-x-2">
                    <button type="button" onclick="fecharModalEditar()" 
                            class="px-6 py-2 bg-gray-200 rounded-lg hover:bg-gray-300 font-semibold transition">Cancelar</button>
                    <button type="submit" 
                            class="px-6 py-2 bg-gradient-to-r from-primary-red to-primary-yellow text-white rounded-lg hover:opacity-90 font-semibold shadow-lg transition">
                        <i class="fas fa-save mr-2"></i>Salvar Alterações
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div id="loading-overlay" class="loading-overlay hidden">
        <div class="spinner"></div>
        <p class="loading-text">Processando...</p>
    </div>
    <script src="/js/loading.js"></script>
    <script>
        function abrirModalCriar() {
            document.getElementById('modalCriar').classList.remove('hidden');
            document.getElementById('novoTituloChecklist').focus();
        }

        function fecharModalCriar() {
            document.getElementById('modalCriar').classList.add('hidden');
            document.getElementById('formCriar').reset();
        }

        function criarChecklist(event) {
            event.preventDefault();
            showLoading('Criando checklist...');
            
            const titulo = document.getElementById('novoTituloChecklist').value.trim();
            const tipo = document.getElementById('novoTipoChecklist').value.trim();
            const itensTexto = document.getElementById('novosItensChecklist').value.trim();
            
            if (!titulo) {
                hideLoading();
                alert('O nome do checklist é obrigatório!');
                return;
            }

            const itens = itensTexto ? itensTexto.split('\n').filter(item => item.trim()).map(item => item.trim()) : [];

            fetch('/checklist/criar-custom', {
                method: 'POST',
                headers: getCSRFHeaders(),
                body: JSON.stringify({ titulo, tipo: tipo || 'custom', itens, _csrf: window.csrfToken })
            })
            .then(r => r.json())
            .then(data => {
                hideLoading();
                if (data.success) {
                    window.location.href = '/checklist/custom/' + data.data.id;
                } else {
                    alert('Erro ao criar checklist: ' + (data.error || 'Erro desconhecido'));
                }
            })
            .catch(error => {
                hideLoading();
                console.error('Erro:', error);
                alert('Erro ao criar checklist. Tente novamente.');
            });
        }

        function editarChecklist(id, titulo, tipo) {
            document.getElementById('checklistIdEditar').value = id;
            document.getElementById('tituloChecklistEditar').value = titulo;
            document.getElementById('tipoChecklistEditar').value = tipo || 'custom';
            document.getElementById('modalEditar').classList.remove('hidden');
            document.getElementById('tituloChecklistEditar').focus();
        }

        function fecharModalEditar() {
            document.getElementById('modalEditar').classList.add('hidden');
            document.getElementById('formEditar').reset();
        }

        function salvarEdicaoChecklist(event) {
            event.preventDefault();
            showLoading('Salvando alterações...');
            
            const id = document.getElementById('checklistIdEditar').value;
            const titulo = document.getElementById('tituloChecklistEditar').value.trim();
            const tipo = document.getElementById('tipoChecklistEditar').value.trim();

            if (!titulo) {
                hideLoading();
                alert('O nome do checklist é obrigatório!');
                return;
            }

            fetch('/checklist/atualizar-custom', {
                method: 'POST',
                headers: getCSRFHeaders(),
                body: JSON.stringify({ checklistId: id, titulo, tipo: tipo || 'custom', _csrf: window.csrfToken })
            })
            .then(r => r.json())
            .then(data => {
                hideLoading();
                if (data.success) {
                    location.reload();
                } else {
                    alert('Erro ao atualizar checklist: ' + (data.error || 'Erro desconhecido'));
                }
            })
            .catch(error => {
                hideLoading();
                console.error('Erro:', error);
                alert('Erro ao atualizar checklist. Tente novamente.');
            });
        }

        function deletarChecklist(id, titulo) {
            if (!confirm('Tem certeza que deseja deletar o checklist "' + titulo + '"?\n\nEsta ação não pode ser desfeita e todos os itens serão removidos.')) {
                return;
            }

            showLoading('Deletando checklist...');

            fetch('/checklist/deletar', {
                method: 'POST',
                headers: getCSRFHeaders(),
                body: JSON.stringify({ checklistId: id, _csrf: window.csrfToken })
            })
            .then(r => r.json())
            .then(data => {
                hideLoading();
                if (data.success) {
                    location.reload();
                } else {
                    alert('Erro ao deletar checklist: ' + (data.error || 'Erro desconhecido'));
                }
            })
            .catch(error => {
                hideLoading();
                console.error('Erro:', error);
                alert('Erro ao deletar checklist. Tente novamente.');
            });
        }

        // Fechar modais ao clicar fora
        document.addEventListener('click', function(event) {
            const modalCriar = document.getElementById('modalCriar');
            const modalEditar = document.getElementById('modalEditar');
            
            if (event.target === modalCriar) {
                fecharModalCriar();
            }
            if (event.target === modalEditar) {
                fecharModalEditar();
            }
        });

        // Fechar modais com ESC
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                fecharModalCriar();
                fecharModalEditar();
            }
        });
    </script>
</body>
</html>
