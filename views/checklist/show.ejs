<body class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 min-h-screen">
    <% if (typeof user !== 'undefined' && user) { %>
        <%- include('../partials/navbar') %>
    <% } %>

    <main class="max-w-4xl mx-auto px-4 py-6 sm:px-6 lg:px-8 relative">
        <!-- Background Elements -->
        <div class="absolute top-0 right-0 w-96 h-96 bg-primary-red/10 rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 left-0 w-96 h-96 bg-primary-yellow/10 rounded-full blur-3xl"></div>
        
        <div class="relative z-10">
            <!-- Header -->
            <div class="mb-8 animate-fade-in">
                <a href="/checklist" class="text-white/70 hover:text-primary-yellow transition-colors flex items-center gap-2 text-sm font-semibold mb-4">
                    <i class="fas fa-arrow-left"></i>
                    Voltar para Checklists
                </a>

                <div class="glass rounded-2xl shadow-2xl p-6 border border-white/20 backdrop-blur-xl card-hover border-l-4 border-primary-red/80">
                <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                    <div class="flex-1">
                        <h1 id="checklistTitulo" class="text-3xl font-black text-white mb-2">
                            <%= checklist.titulo %>
                        </h1>
                        <div class="flex flex-wrap items-center gap-4 text-sm text-white/80">
                            <span class="px-3 py-1 bg-primary-red/80 text-white rounded-full font-bold uppercase text-xs">
                                <%= checklist.tipo || 'Custom' %>
                            </span>
                            <span>
                                <i class="fas fa-list mr-1 text-primary-yellow"></i>
                                <%= itens.length %> item<%= itens.length !== 1 ? 's' : '' %>
                            </span>
                            <% 
                                const itensConcluidos = itens.filter(i => i.concluido).length;
                                const percentual = itens.length > 0 ? Math.round((itensConcluidos / itens.length) * 100) : 0;
                            %>
                            <span>
                                <i class="fas fa-check-circle mr-1 text-green-400"></i>
                                <%= itensConcluidos %> concluído<%= itensConcluidos !== 1 ? 's' : '' %>
                            </span>
                            <% if (checklist.created_at) { %>
                                <span>
                                    <i class="fas fa-calendar-alt mr-1 text-primary-yellow"></i>
                                    Criado em <%= new Date(checklist.created_at).toLocaleDateString('pt-BR') %>
                                </span>
                            <% } %>
                        </div>
                    </div>
                    <button 
                        type="button"
                        data-action="editar-titulo"
                        class="group relative px-4 py-2 glass border border-white/20 text-white rounded-xl font-semibold hover:border-primary-yellow/50 transition-all transform hover:scale-105">
                        <span class="relative z-10 flex items-center">
                            <i class="fas fa-edit mr-2"></i>
                            Editar Título
                        </span>
                        <div
                            class="absolute inset-0 bg-gradient-to-r from-primary-yellow to-primary-red opacity-0 group-hover:opacity-100 transition-opacity rounded-xl">
                        </div>
                    </button>
                </div>

                <!-- Barra de Progresso -->
                <div class="mt-6">
                    <div class="flex justify-between items-center mb-2">
                        <span class="text-sm font-semibold text-white/90">Progresso Geral</span>
                        <span class="text-lg font-bold text-white"><%= percentual %>%</span>
                    </div>
                    <div class="w-full bg-white/20 rounded-full h-4 overflow-hidden">
                        <div 
                            class="bg-gradient-to-r from-primary-red to-primary-yellow h-4 rounded-full transition-all duration-500 flex items-center justify-end pr-2"
                            style="width: <%= percentual %>%">
                            <% if (percentual > 10) { %>
                                <span class="text-xs font-bold text-white"><%= percentual %>%</span>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Lista de Itens -->
        <div class="glass rounded-2xl shadow-2xl p-6 mb-6 border border-white/20 backdrop-blur-xl card-hover animate-slide-up">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-xl font-black text-white flex items-center">
                    <div class="relative mr-3">
                        <div class="absolute inset-0 bg-gradient-to-r from-primary-red to-primary-yellow rounded-xl blur opacity-50"></div>
                        <div class="relative bg-gradient-to-r from-primary-red to-primary-yellow p-2 rounded-xl">
                            <i class="fas fa-tasks text-white text-xl icon-glow"></i>
                        </div>
                    </div>
                    Itens do <span class="gradient-text">Checklist</span>
                </h2>
                <button 
                    type="button"
                    data-action="adicionar-item"
                    class="group relative px-4 py-2 bg-gradient-to-r from-primary-red to-primary-yellow text-white rounded-xl font-semibold hover:shadow-lg hover:shadow-primary-yellow/50 transition-all transform hover:scale-105 overflow-hidden">
                    <span class="relative z-10 flex items-center">
                        <i class="fas fa-plus mr-2"></i>
                        Adicionar Item
                    </span>
                    <div
                        class="absolute inset-0 bg-gradient-to-r from-primary-yellow to-primary-red opacity-0 group-hover:opacity-100 transition-opacity">
                    </div>
                </button>
            </div>

            <div id="listaItens" class="space-y-3">
                <% if (itens && itens.length > 0) { %>
                    <% itens.forEach((item, index) => { %>
                        <div 
                            class="item-row flex items-start gap-4 p-4 glass rounded-xl hover:bg-white/10 transition fade-in-item border-l-4 <%= item.concluido ? 'border-green-500/80' : 'border-white/20' %> card-hover"
                            data-item-id="<%= item.id %>">
                            <input 
                                type="checkbox" 
                                id="item-<%= item.id %>"
                                <%= item.concluido ? 'checked' : '' %>
                                data-action="toggle"
                                data-item-id="<%= item.id %>"
                                class="mt-1 w-5 h-5 text-primary-red focus:ring-primary-red border-white/30 rounded cursor-pointer">
                            
                            <div class="flex-1">
                                <div 
                                    class="item-text <%= item.concluido ? 'item-completed text-white/50' : 'text-white' %> font-medium outline-none cursor-text"
                                    contenteditable="true"
                                    data-action="editar-texto"
                                    data-item-id="<%= item.id %>">
                                    <%= item.item %>
                                </div>
                                <% if (item.observacao) { %>
                                    <p class="text-sm text-white/70 mt-1 italic bg-white/5 p-2 rounded border border-white/10">
                                        <i class="fas fa-info-circle mr-1 text-primary-yellow"></i>
                                        <%= item.observacao %>
                                    </p>
                                <% } %>
                                <div class="flex items-center gap-3 mt-2 text-xs text-white/70">
                                    <% if (item.updated_at) { %>
                                        <span>
                                            <i class="fas fa-clock mr-1 text-primary-yellow"></i>
                                            Atualizado <%= new Date(item.updated_at).toLocaleDateString('pt-BR') %>
                                        </span>
                                    <% } %>
                                    <button 
                                        type="button"
                                        data-action="adicionar-observacao"
                                        data-item-id="<%= item.id %>"
                                        class="text-primary-yellow hover:text-primary-red transition">
                                        <i class="fas fa-comment mr-1"></i>
                                        <%= item.observacao ? 'Editar' : 'Adicionar' %> Observação
                                    </button>
                                </div>
                            </div>

                            <div class="item-actions flex gap-2">
                                <button 
                                    type="button"
                                    data-action="remover"
                                    data-item-id="<%= item.id %>"
                                    class="p-2 text-white/50 hover:text-primary-red transition">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="text-center py-12 text-white/70">
                        <i class="fas fa-clipboard-list text-4xl mb-3"></i>
                        <p>Nenhum item adicionado ainda.</p>
                        <p class="text-sm mt-2">Clique em "Adicionar Item" para começar.</p>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Adicionar Item Rápido -->
