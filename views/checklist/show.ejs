                            <i class="fas fa-save mr-2"></i>
                            Salvar
                        </span>
                        <div
                            class="absolute inset-0 bg-gradient-to-r from-primary-yellow to-primary-red opacity-0 group-hover:opacity-100 transition-opacity">
                        </div>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        const checklistId = '<%= checklist.id %>';
        window.csrfToken = '<%= typeof csrfToken !== "undefined" && csrfToken ? csrfToken : "" %>';
        
        function getCSRFHeaders() {
            const headers = { 'Content-Type': 'application/json' };
            if (window.csrfToken) {
                headers['X-CSRF-Token'] = window.csrfToken;
            }
            return headers;
        }

        // Event Listeners
        document.addEventListener('DOMContentLoaded', function() {
            // Toggle Item
            document.querySelectorAll('[data-action="toggle"]').forEach(checkbox => {
                checkbox.addEventListener('change', function() {
                    toggleItem(this.getAttribute('data-item-id'), this.checked);
                });
            });

            // Editar Texto Item
            document.querySelectorAll('[data-action="editar-texto"]').forEach(el => {
                el.addEventListener('blur', function() {
                    const itemId = this.getAttribute('data-item-id');
                    const novoTexto = this.innerText.trim();
                    if (novoTexto) {
                        atualizarTextoItem(itemId, novoTexto);
                    } else {
                        this.innerText = this.getAttribute('data-original') || 'Item sem descrição';
                    }
                });
            });

            // Editar Título
            document.querySelector('[data-action="editar-titulo"]').addEventListener('click', function() {
                document.getElementById('modalTitulo').classList.remove('hidden');
                document.getElementById('novoTitulo').focus();
                document.getElementById('novoTitulo').select();
            });

            // Fechar Modal Título
            document.querySelectorAll('[data-action="fechar-titulo"]').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.getElementById('modalTitulo').classList.add('hidden');
                });
            });

            // Adicionar Item
            document.querySelector('[data-action="adicionar-item"]').addEventListener('click', function() {
                document.getElementById('novoItemInput').focus();
            });

            // Salvar Item Rápido
            document.querySelector('[data-action="salvar-item-rapido"]').addEventListener('click', salvarNovoItem);
            document.getElementById('novoItemInput').addEventListener('keydown', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    salvarNovoItem();
                }
            });

            // Adicionar Observação
            document.querySelectorAll('[data-action="adicionar-observacao"]').forEach(btn => {
                btn.addEventListener('click', function() {
                    const itemId = this.getAttribute('data-item-id');
                    const itemRow = document.querySelector(`[data-item-id="${itemId}"]`);
                    const observacao = itemRow.querySelector('.text-gray-500.italic')?.textContent.replace(/.*?fa-info-circle.*?/, '').trim() || '';
                    document.getElementById('itemIdObservacao').value = itemId;
                    document.getElementById('textoObservacao').value = observacao;
                    document.getElementById('modalObservacao').classList.remove('hidden');
                    document.getElementById('textoObservacao').focus();
                });
            });

            // Fechar Modal Observação
            document.querySelectorAll('[data-action="fechar-observacao"]').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.getElementById('modalObservacao').classList.add('hidden');
                });
            });

            // Remover Item
            document.querySelectorAll('[data-action="remover"]').forEach(btn => {
                btn.addEventListener('click', function() {
                    const itemId = this.getAttribute('data-item-id');
                    removerItem(itemId);
                });
            });

            // Fechar modais ao clicar fora
            document.getElementById('modalTitulo').addEventListener('click', function(e) {
                if (e.target === this) this.classList.add('hidden');
            });

            document.getElementById('modalObservacao').addEventListener('click', function(e) {
                if (e.target === this) this.classList.add('hidden');
            });
        });

        function toggleItem(itemId, concluido) {
            const itemRow = document.querySelector(`[data-item-id="${itemId}"]`);
            const itemText = itemRow.querySelector('.item-text');
            
            // Atualização visual imediata
            if (concluido) {
                itemText.classList.add('item-completed');
                itemRow.classList.remove('border-gray-300');
                itemRow.classList.add('border-green-500');
            } else {
                itemText.classList.remove('item-completed');
                itemRow.classList.remove('border-green-500');
                itemRow.classList.add('border-gray-300');
            }

            // Atualização no servidor
            fetch('/checklist/item/concluir', {
                method: 'POST',
                headers: getCSRFHeaders(),
                body: JSON.stringify({ 
                    itemId, 
                    concluido: concluido.toString(),
                    _csrf: window.csrfToken 
                })
            })
            .then(r => r.json())
            .then(data => {
                if (!data.success) {
                    // Reverter se falhar
                    const checkbox = document.querySelector(`[data-item-id="${itemId}"][type="checkbox"]`);
                    checkbox.checked = !concluido;
                    toggleItem(itemId, !concluido);
                }
            })
            .catch(error => {
                console.error('Erro:', error);
                // Reverter se falhar
                const checkbox = document.querySelector(`[data-item-id="${itemId}"][type="checkbox"]`);
                checkbox.checked = !concluido;
                toggleItem(itemId, !concluido);
            });
        }

        function atualizarTextoItem(itemId, novoTexto) {
            if (!novoTexto.trim()) return;

            fetch('/checklist/item/atualizar', {
                method: 'POST',
                headers: getCSRFHeaders(),
                body: JSON.stringify({ 
                    itemId, 
                    item: novoTexto.trim(),
                    _csrf: window.csrfToken 
                })
            })
            .catch(error => {
                console.error('Erro ao atualizar item:', error);
            });
        }

        function salvarNovoItem() {
            const input = document.getElementById('novoItemInput');
            const valor = input.value.trim();
            
            if (!valor) {
                alert('Digite um item para adicionar!');
                return;
            }

            fetch('/checklist/item/adicionar', {
                method: 'POST',
                headers: getCSRFHeaders(),
                body: JSON.stringify({ 
                    checklistId, 
                    item: valor,
                    _csrf: window.csrfToken 
                })
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Erro ao adicionar item: ' + (data.error || 'Erro desconhecido'));
                }
            })
            .catch(error => {
                console.error('Erro:', error);
                alert('Erro ao adicionar item. Tente novamente.');
            });
        }

        function removerItem(itemId) {
            if (!confirm('Tem certeza que deseja remover este item?')) {
                return;
            }

            fetch('/checklist/item/remover', {
                method: 'POST',
                headers: getCSRFHeaders(),
                body: JSON.stringify({ 
                    itemId,
                    _csrf: window.csrfToken 
                })
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    document.querySelector(`[data-item-id="${itemId}"]`).remove();
                    // Atualizar contador se necessário
                    location.reload();
                } else {
                    alert('Erro ao remover item: ' + (data.error || 'Erro desconhecido'));
                }
            })
            .catch(error => {
                console.error('Erro:', error);
                alert('Erro ao remover item. Tente novamente.');
            });
        }

        // Form Editar Título
        document.getElementById('formTitulo').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const novoTitulo = document.getElementById('novoTitulo').value.trim();
            if (!novoTitulo) {
                alert('O título não pode estar vazio');
                return;
            }

            fetch('/checklist/atualizar', {
                method: 'POST',
                headers: getCSRFHeaders(),
                body: JSON.stringify({ 
                    checklistId, 
                    titulo: novoTitulo,
                    _csrf: window.csrfToken 
                })
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    document.getElementById('checklistTitulo').textContent = novoTitulo;
                    document.getElementById('modalTitulo').classList.add('hidden');
                } else {
                    alert('Erro ao atualizar título: ' + (data.error || 'Erro desconhecido'));
                }
            })
            .catch(error => {
                console.error('Erro:', error);
                alert('Erro ao atualizar título. Tente novamente.');
            });
        });

        // Form Observação
        document.getElementById('formObservacao').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const itemId = document.getElementById('itemIdObservacao').value;
            const observacao = document.getElementById('textoObservacao').value.trim();
            const itemRow = document.querySelector(`[data-item-id="${itemId}"]`);
            const itemText = itemRow.querySelector('.item-text').innerText.trim();

            fetch('/checklist/item/atualizar', {
                method: 'POST',
                headers: getCSRFHeaders(),
                body: JSON.stringify({ 
                    itemId, 
                    item: itemText,
                    observacao: observacao || null,
                    _csrf: window.csrfToken 
                })
            })
            .then(r => r.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Erro ao salvar observação: ' + (data.error || 'Erro desconhecido'));
                }
            })
            .catch(error => {
                console.error('Erro:', error);
                alert('Erro ao salvar observação. Tente novamente.');
            });
        });
    </script>
