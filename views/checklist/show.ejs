            <h3 class="text-lg font-black text-white mb-4 flex items-center">
                <div class="relative mr-3">
                    <div class="absolute inset-0 bg-gradient-to-r from-primary-yellow to-primary-red rounded-xl blur opacity-50"></div>
                    <div class="relative bg-gradient-to-r from-primary-yellow to-primary-red p-2 rounded-xl">
                        <i class="fas fa-plus-circle text-white text-xl icon-glow-yellow"></i>
                    </div>
                </div>
                Adicionar Item <span class="gradient-text">Rápido</span>
            </h3>
            <div class="flex gap-3">
                <input 
                    type="text" 
                    id="novoItemInput" 
                    placeholder="Digite o novo item e pressione Enter..."
                    class="flex-1 px-4 py-3 glass border border-white/20 rounded-xl text-white placeholder-white/50 focus:border-primary-red focus:ring-2 focus:ring-primary-red transition outline-none input-glow backdrop-blur-sm">
                <button 
                    type="button"
                    data-action="salvar-item-rapido"
                    class="group relative px-6 py-3 bg-gradient-to-r from-primary-red to-primary-yellow text-white rounded-xl font-bold hover:shadow-lg hover:shadow-primary-yellow/50 transition-all transform hover:scale-105 overflow-hidden">
                    <span class="relative z-10 flex items-center">
                        <i class="fas fa-check mr-2"></i>
                        Adicionar
                    </span>
                    <div
                        class="absolute inset-0 bg-gradient-to-r from-primary-yellow to-primary-red opacity-0 group-hover:opacity-100 transition-opacity">
                    </div>
                </button>
            </div>
        </div>
        </div>
    </main>

    <!-- Modal Editar Título -->
    <div id="modalTitulo" class="hidden fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-4">
        <div class="glass-dark border border-white/20 rounded-2xl shadow-2xl p-8 max-w-md w-full">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-2xl font-black text-white">
                    <i class="fas fa-edit text-primary-yellow mr-2 icon-glow-yellow"></i>
                    Editar <span class="gradient-text">Título</span>
                </h3>
                <button 
                    type="button"
                    data-action="fechar-titulo"
