    <!-- Modal Adicionar/Editar Observação -->
    <div id="modalObservacao" class="hidden fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-4">
        <div class="glass-dark border border-white/20 rounded-2xl shadow-2xl p-8 max-w-md w-full">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-2xl font-black text-white">
                    <i class="fas fa-comment text-primary-yellow mr-2 icon-glow-yellow"></i>
                    Observação do <span class="gradient-text">Item</span>
                </h3>
                <button 
                    type="button"
                    data-action="fechar-observacao"
                    class="text-white/70 hover:text-white transition-colors">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
            <form id="formObservacao" class="space-y-4">
                <% if (typeof csrfToken !== 'undefined' && csrfToken) { %>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <% } %>
                <input type="hidden" id="itemIdObservacao">
                <textarea 
                    id="textoObservacao" 
                    rows="4"
                    placeholder="Digite uma observação para este item..."
                    class="w-full px-4 py-3 glass border border-white/20 rounded-xl text-white placeholder-white/50 focus:border-primary-yellow focus:ring-2 focus:ring-primary-yellow transition outline-none resize-none input-glow backdrop-blur-sm"></textarea>
                <div class="flex gap-3">
                    <button 
                        type="button"
                        data-action="fechar-observacao"
                        class="flex-1 py-3 glass-dark border border-white/20 text-white font-bold rounded-xl hover:bg-white/10 transition">
                        Cancelar
                    </button>
                    <button 
                        type="submit"
                        class="group relative flex-1 py-3 bg-gradient-to-r from-primary-red to-primary-yellow text-white font-bold rounded-xl hover:shadow-lg hover:shadow-primary-yellow/50 transition-all transform hover:scale-105 overflow-hidden">
